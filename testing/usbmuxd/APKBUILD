# Contributor: Leo <thinkabit.ukim@gmail.com>
maintainer="Krassy Boykinov <kboykinov@teamcentrixx.com>"
pkgname=usbmuxd
pkgver=1.1.1_git20250201
_commit=523f7004dce885fe38b4f80e34a8f76dc8ea98b5
pkgrel=9
pkgdesc="Socket Daemon to multiplex connections from iOS"
url="https://libimobiledevice.org"
arch="all"
makedepends="
	autoconf
	automake
	libimobiledevice-dev
	libimobiledevice-glue-dev
	libplist-dev
	libtool
	libusb-dev
	"
license="GPL-2.0-or-later"
install="$pkgname.post-install"
subpackages="$pkgname-doc $pkgname-udev"
source="$pkgname-$pkgver.tar.gz::https://github.com/libimobiledevice/usbmuxd/archive/$_commit.tar.gz
	001-confiure-no-udev.patch
	"
builddir="$srcdir/usbmuxd-$_commit"

prepare() {
	default_prepare
	echo "$pkgver" > .tarball-version
	autoreconf -fi
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--without-systemd
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

udev() {
	install_if="eudev usbmuxd=$pkgver-r$pkgrel"
	amove usr/lib/udev
}

sha512sums="
ff67661bde9d501c447a68de6ebff3bcaaf5a9eebe7be97268edeb92ec6d679d2324fd0b8a31f5ddb6030ddc4d33997c1ad810e939a31dd6efba6392445a9513  usbmuxd-1.1.1_git20250201.tar.gz
a8a4ed6877c691a44b53b2c554149c90034cbed8d48e0daf682aa7afbfb8f12cb05e4d99bd05dccc2e814f6001ccf19d61e9bff8c2da5e44ede386ea3565661f  001-confiure-no-udev.patch
"
