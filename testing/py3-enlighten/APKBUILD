maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-enlighten
pkgver=1.14.1
pkgrel=0
pkgdesc="Console progress bar library for Python"
url="https://github.com/Rockhopper-Technologies/enlighten"
arch="noarch"
license="MPL-2.0"
depends="py3-blessed py3-prefixed"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Rockhopper-Technologies/enlighten/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/enlighten-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
15f44841707a9e77e1f2174a42ae07bac7ee1be5f14dcc17354f85478b6bdb8893d18d903838c359452ee8cb60604b2ea795873598734f465d9f921102b8614a  py3-enlighten-1.14.1.tar.gz
"
