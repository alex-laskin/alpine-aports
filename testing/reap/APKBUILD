pkgname=reap
pkgver=0.2
pkgrel=0
pkgdesc="Run process until all its spawned processes are dead"
url="https://git.vuxu.org/reap/"
arch="all"
license="CC0-1.0"
subpackages="$pkgname-doc"
source="https://git.vuxu.org/reap/snapshot/reap-$pkgver.tar.gz"
options="!check" #no test suite defined

build() {
	make
}

package() {
	make DESTDIR=$pkgdir PREFIX=/usr install
}

