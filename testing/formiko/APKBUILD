# Contributor: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
# Maintainer: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
pkgname=formiko
pkgver=1.5.0
pkgrel=0
pkgdesc="reStructuredText editor and live previewer"
url="https://github.com/ondratu/formiko"
arch="noarch"
license="BSD-3-Clause"
depends="
	gobject-introspection
	gtk+3.0
	gtksourceview5
	gtkspell3
	python3
	py3-gobject3
	py3-pygments
	webkit2gtk-6.0
	"
makedepends="py3-gpep517 py3-docutils py3-setuptools py3-wheel"
subpackages="$pkgname-doc $pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/ondratu/formiko/archive/refs/tags/$pkgver.tar.gz"
options="!check" # No upstream testsuite defined

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
7ee195309fb90458f28bdece73b2d84eb8ff08ce6c7942b6ade956a1c699cd19a59b9cb171b954bcdb234a998b9011e94d693550523a6f94acacfbd3dc940961  formiko-1.5.0.tar.gz
"
