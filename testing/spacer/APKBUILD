maintainer="qaqland <qaq@qaq.land>"
pkgname=spacer
pkgver=0.5.0
pkgrel=0
pkgdesc="CLI tool to insert spacers when command output stops"
url="https://github.com/samwho/spacer"
arch="all"
license="MIT"
makedepends="cargo cargo-auditable"
subpackages="$pkgname-doc"
source="https://github.com/samwho/spacer/archive/v$pkgver/spacer-$pkgver.tar.gz"
options="net" # cargo fetch

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/spacer "$pkgdir"/usr/bin/$pkgname

	install -Dm644 README.md -t "$pkgdir"/usr/share/doc/$pkgname
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname
}

sha512sums="
4231111b3c231068bf26930295a95479bb67c98610466bb1ceba3089b8ea13caad5fcbb10c6fce9fb4de0c631cb306188fee965854b03f1b1225c83d1d152bbb  spacer-0.5.0.tar.gz
"
