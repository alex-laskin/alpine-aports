maintainer="Georg Lehner <jorge@magma-soft.at>"
pkgname=femto
pkgver=2.24.1
pkgrel=0
pkgdesc="Tiny Emacs clone with tiny Lisp extension language"
url="https://github.com/jorge-leon/femto"
arch="all"
license="CC0-1.0"
makedepends="ncurses-dev"
case "$CARCH" in
x86_64|aarch64) makedepends="$makedepends pandoc-cli" ;;
esac
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/jorge-leon/femto/archive/refs/tags/v$pkgver.tar.gz"

build() {
	case "$CARCH" in
	x86_64|aarch64) make doc PREFIX=/usr ;;
	esac
	make PREFIX=/usr
}

package() {
	make install PREFIX=/usr DESTDIR="$pkgdir"
}

check() {
	make check
}
sha512sums="
4266d3f55c1bf76e965e774d46aed7b64b634c53392b58e7bfe31421cf38b41de8a0de4c475bc217fc2dfe6e9bbfc944fbca4d787865628b4111c4f33b3e41af  femto-2.24.1.tar.gz
"
