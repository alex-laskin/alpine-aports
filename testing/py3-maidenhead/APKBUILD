# Contributor: Oleg Titov <oleg.titov@gmail.com>
# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-maidenhead
pkgver=1.8.0
pkgrel=0
pkgdesc="Python Maidenhead <--> WGS84 coordinate conversions"
url="https://github.com/space-physics/maidenhead"
arch="all"
license="MIT"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
checkdepends="py3-pytest"
subpackages="$pkgname-doc $pkgname-pyc"
source="py3-maidenhead-$pkgver.tar.gz::https://github.com/space-physics/maidenhead/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/maidenhead-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl

	rm -r "$pkgdir"/usr/lib/python3*/site-packages/maidenhead/tests/

	install -Dm644 README.md -t "$pkgdir"/usr/share/doc/"$pkgname"
	install -Dm644 LICENSE.txt -t "$pkgdir"/usr/share/licenses/"$pkgname"
}

sha512sums="
7359561e08886149cf616e4fa386f06a8304ebeed238100a4d7fd6e230895550f28501c149c22096d99a6a1ff49458abb881857635b2d1a83638d0edbc30bd31  py3-maidenhead-1.8.0.tar.gz
"
