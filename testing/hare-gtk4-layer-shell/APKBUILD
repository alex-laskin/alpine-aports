pkgname=hare-gtk4-layer-shell
pkgver=0.1.0
pkgrel=0
pkgdesc="gtk4-layer-shell bindings for Hare"
url="https://git.sr.ht/~sircmpwn/hare-gtk4-layer-shell/"
arch="noarch !armhf !armv7 !ppc64le !s390x !x86 !loongarch64" # blocked by hare
license="MPL-2.0"
depends="gtk4-layer-shell-dev hare hare-gi"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/hare-gtk4-layer-shell/archive/$pkgver.tar.gz"
options="!check" # no test suite

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

