maintainer="Hoang Nguyen <folliekazetani@protonmail.com>"
pkgname=py3-uc-micro-py
pkgver=1.0.3
pkgrel=0
pkgdesc="Micro subset of unicode data files used by py3-linkify-it-py"
url="https://github.com/tsutsu3/uc.micro-py"
arch="noarch"
license="MIT"
depends="python3"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/tsutsu3/uc.micro-py/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/uc.micro-py-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
b465df3e3ac7a1bf67887d51b7323fba6ac2ae1403810762bf30a8d40a6e605770626617a13fe9f925072ad007cdde2778d216b437ec68e2e893e69c7bdc5ba5  py3-uc-micro-py-1.0.3.tar.gz
"
