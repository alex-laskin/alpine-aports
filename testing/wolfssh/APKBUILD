# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=wolfssh
pkgver=1.4.17
_pkgver=$pkgver-stable
pkgrel=1
pkgdesc="Small, fast, portable SSH implementation, including SCP and SFTP"
url="https://www.wolfssl.com"
arch="all"
license="GPL-3.0-only"
depends_dev="wolfssl-dev"
makedepends="
	$depends_dev
	autoconf
	automake
	libtool
	"
checkdepends="bash"
subpackages="$pkgname-dev"
source="https://github.com/wolfSSL/wolfssh/archive/v$_pkgver/wolfssh-$_pkgver.tar.gz
	wolfssl.patch
	"
builddir="$srcdir/$pkgname-$_pkgver"

case "$CARCH" in
	s390x) options="!check";;  # tests fail
esac

prepare() {
	default_prepare

	./autogen.sh
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--enable-distro
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
