maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=gnome-mahjongg
pkgver=49.0.1
pkgrel=0
pkgdesc="Match tiles and clear the board"
url="https://apps.gnome.org/Mahjongg/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	desktop-file-utils
	gtk4.0-dev
	libadwaita-dev
	librsvg-dev
	meson
	vala
	"
subpackages="$pkgname-doc $pkgname-lang"
source="https://download.gnome.org/sources/gnome-mahjongg/${pkgver%%.*}/gnome-mahjongg-$pkgver.tar.xz"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
f57c199268e86b23b54c03f1a9ed2eaff59075375128d9124a21808d4fb5c1a9c4e9a7e82b9c83d1d4e8e0afee0f2292597c177963ffc971693da4e5f164a761  gnome-mahjongg-49.0.1.tar.xz
"
