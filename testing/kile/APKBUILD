# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <achill@achill.org>"
pkgname=kile
pkgver=3.0_beta4
_pkgver=${pkgver/_beta/b}
pkgrel=0
# armhf: KF6
# loongarch64, ppc64le, riscv64: okular
# s390x: okular & texlive
arch="all !armhf !loongarch64 !ppc64le !riscv64 !s390x"
url="https://kde.org/applications/office/org.kde.kile"
pkgdesc="User-friendly TeX/LaTeX editor"
license="GPL-2.0-or-later"
depends="texlive"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kcrash-dev
	kdbusaddons-dev
	kdoctools-dev
	kguiaddons-dev
	ki18n-dev
	kiconthemes-dev
	kio-dev
	kparts-dev
	ktexteditor-dev
	kwindowsystem-dev
	kxmlgui-dev
	okular-dev
	poppler-qt5-dev
	qt6-qtbase-dev
	samurai
	"
_repo_url="https://invent.kde.org/office/kile.git"
source="https://invent.kde.org/office/kile/-/archive/v$_pkgver/kile-v$_pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$_pkgver"
subpackages="$pkgname-doc $pkgname-lang"
options="!check" # no tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

check() {
	ctest --test-dir build --output-on-failure
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
eb3169f49e3b9213fa97ad7e2f0c8029a2856fe315c2c239e95157b2baaf201248e9be122f6070ba353325aefdd84a17b6aba4e4ddfbbe769fa6ede35c997b5a  kile-v3.0b4.tar.gz
"
