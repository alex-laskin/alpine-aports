# Contributor: Gabriel <gabriwinter@gmail.com.com>
# Maintainer: Gabriel <gabriwinter@gmail.com.com>
pkgname=ttynvt
pkgver=0.17
pkgrel=0
pkgdesc="Makes a virtual serial device (tty) and connects the device to a Network Virtual Terminal (NVT)"
url="https://gitlab.com/lars-thrane-as/ttynvt"
arch="all !ppc64le" # fails to build
license="GPL-2.0-only"
makedepends="autoconf automake libtool linux-headers fuse-dev"
source="$pkgname-$pkgver.tar.gz::https://gitlab.com/lars-thrane-as/ttynvt/-/archive/v0.17/ttynvt-v$pkgver.tar.gz"
options="!check" # no tests
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	autoreconf -vif
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var
	make
}

package() {
	install -Dm755 src/ttynvt "$pkgdir/usr/bin/ttynvt"
}

sha512sums="
032e8d5c9f5b0bda180f2ec722a3392f81f370d414a9de7dd74a4fb235c06c74295b018b573bf5c3b864c8f512b6b2926da5ba8315d3541f7fed929c69efa4d7  ttynvt-0.17.tar.gz
"
