# Contributor: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
# Maintainer: Saijin-Naib <Saijin-Naib_package-maintenance@outlook.com>
pkgname=gradia
pkgver=1.9.0
pkgrel=0
pkgdesc="Make your screenshots ready for all"
url="https://gradia.alexandervanhee.be/"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	appstream-dev
	blueprint-compiler
	cmake
	desktop-file-utils
	gettext-dev
	glib-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	py3-gobject3-dev
	"
depends="gtk4.0 libadwaita"
subpackages="$pkgname-dev $pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/AlexanderVanhee/Gradia/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/Gradia-$pkgver/"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
b94c2d51cbbcf616d26b5c28713fe729494dd625345c51e08615cdf99fdfca868c1bed9a7c65c7737e6a05aef0b93de32d53e1278c7cf04cc77914171fad1ee5  gradia-1.9.0.tar.gz
"
