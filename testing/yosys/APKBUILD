# Contributor: Dominika Liberda <ja@sdomi.pl>
# Maintainer: Dominika Liberda <ja@sdomi.pl>
pkgname=yosys
pkgver=0.57
pkgrel=0
pkgdesc="Yosys Open SYnthesis Suite"
url="https://yosyshq.net"
# s390x: https://github.com/YosysHQ/yosys/issues/2645
arch="all !s390x"
license="ISC"
depends="
	abc
	"
makedepends="
	bash
	bison
	boost-dev
	flex-dev
	gawk
	graphviz-dev
	libffi-dev
	lld
	protobuf-dev
	python3
	readline-dev
	tcl-dev
	zlib-dev
	"
checkdepends="
	gtkwave
	iverilog
	"
subpackages="$pkgname-dev py3-$pkgname:py3:noarch"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/YosysHQ/yosys/releases/download/v$pkgver/yosys.tar.gz
	"
builddir="$srcdir"

prepare() {
	default_prepare

	local pyver="$(python3 -c 'import sys; print(f"{sys.version_info.major}.{sys.version_info.minor}")')"

	cat > Makefile.conf <<- EOF
	CONFIG:=gcc
	PREFIX:=/usr
	ABCEXTERNAL:=abc
	BOOST_PYTHON_LIB:=-lpython$pyver -lboost_python${pyver/./}
	ENABLE_LIBYOSYS:=1
	ENABLE_NDEBUG:=1
	ENABLE_PROTOBUF:=1
	ENABLE_PYOSYS:=1
	ENABLE_ABC:=1
	EOF

	# Remove install line for yosys-abc because ABCEXTERNAL is set
	sed -i '/cp yosys-abc .*pyosys\/yosys-abc/d' Makefile
}

build() {
	# Not using LTO, as test segfault with LTO enabled. Not unique to Alpine:
	# https://gitlab.archlinux.org/archlinux/packaging/packages/yosys/-/blob/main/PKGBUILD?ref_type=heads#L20
	make CXX=g++
}

check() {
	# Assertion failed: selection contains 3 elements instead of the asserted 4: t:LUT3
	rm -f tests/arch/quicklogic/pp3/fsm.ys
	make CXX=g++ test
}

package() {
	make CXX=g++ DESTDIR="$pkgdir" install

	# link python to the global yosys
	ln -sfv /usr/lib/yosys/libyosys.so "$pkgdir"/usr/lib/python3*/site-packages/pyosys/libyosys.so
}

py3() {
	pkgdesc="$pkgdesc (python module)"
	depends="python3 $pkgname=$pkgver-r$pkgrel"

	amove usr/lib/python3*
}

sha512sums="
f856efb5d30ef445fbe7c42bd83136f960f5ca84959f06e6c5c1e2939f5dd895688ca194d66797b9335034b45675f3341770ef581f8d81bb8b0e711a8318852c  yosys-0.57.tar.gz
"
