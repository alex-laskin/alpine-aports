maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=fast-double-parser
pkgver=0.8.1
pkgrel=0
pkgdesc="Fast function to parse strings into double floating-point values"
url="https://github.com/lemire/fast_double_parser"
arch="noarch"
license="Apache-2.0 OR BSL-1.0"
makedepends="cmake samurai"
source="$pkgname-$pkgver.tar.gz::https://github.com/lemire/fast_double_parser/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/fast_double_parser-$pkgver"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		local crossopts="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_BUILD_TYPE=None \
		$crossopts
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
143f5d920159c5fc6d516417d14f297f7ba79764bab794ed6337dff73add7adcf99f27c078cd0e83a2907c5ec1143a247d85fc229eedcaf74d7710bab0adbd76  fast-double-parser-0.8.1.tar.gz
"
