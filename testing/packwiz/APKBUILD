pkgname=packwiz
pkgver=0_git20250902
_commit=adfe66935c410cdeebabbce702abe65fb1b90ddb
pkgrel=1
pkgdesc="A command-line tool for editing and distributing Minecraft modpacks"
url="https://github.com/packwiz/packwiz"
arch="all"
license="MIT"
makedepends="go"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/packwiz/packwiz/archive/$_commit.tar.gz"
builddir="$srcdir/$pkgname-$_commit"
options="net !check" # no test suite

build() {
	go build
}

package() {
	install -Dm755 -t "$pkgdir"/usr/bin "$pkgname"
	install -Dm644 -t "$pkgdir"/usr/share/licenses/"$pkgname" LICENSE
}

