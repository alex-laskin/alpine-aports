# Contributor: Renoir Boulanger <hello@renoirboulanger.com>
# Maintainer: Andy Postnikov <apostnikov@gmail.com>
pkgname=php82-pecl-yaml
_extname=yaml
pkgver=2.2.5
pkgrel=0
pkgdesc="YAML syntax bindings for PHP 8.2 - PECL"
url="https://pecl.php.net/package/yaml"
arch="all"
license="MIT"
_phpv=82
_php=php$_phpv
depends="$_php-common"
makedepends="$_php-dev yaml-dev"
source="php-pecl-$_extname-$pkgver.tgz::https://pecl.php.net/get/$_extname-$pkgver.tgz"
builddir="$srcdir/$_extname-$pkgver"

install_if="php-$_extname php$_phpv"

build() {
	phpize$_phpv
	./configure --prefix=/usr --with-php-config=php-config$_phpv
	make
}

check() {
	make NO_INTERACTION=1 REPORT_EXIT_STATUS=1 test TESTS=--show-diff
	$_php -d extension="$builddir"/modules/$_extname.so --ri $_extname
}

package() {
	make INSTALL_ROOT="$pkgdir" install
	local _confdir="$pkgdir"/etc/$_php/conf.d
	install -d $_confdir
	echo "extension=$_extname" > $_confdir/70_$_extname.ini
}

sha512sums="
76243e277ab6b42bd221f5f620fbee6a94d7f2277331fc9d5c3d1c19ef799dd5b779ad98b2899bd8186bac615ffccc50ed5589acd13a317da823a084b5ae1db3  php-pecl-yaml-2.2.5.tgz
"
