# Contributor: Isaac Dunham <ibid.ag@gmail.com>
# Maintainer:
pkgname=meep
pkgver=1.31.0
pkgrel=1
pkgdesc="FDTD finite-difference time-domain solver"
url="https://meep.readthedocs.io/"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	fftw-dev
	gfortran
	gmp-dev
	gsl-dev
	guile-dev
	harminv-dev>=1.4.1-r3
	hdf5-dev
	libctl-dev
	openblas-dev>=0.3.0
	"
# Omit -doc because it requires latex2html to build
subpackages="$pkgname-dev"
source="https://github.com/NanoComp/meep/releases/download/v$pkgver/meep-$pkgver.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--enable-portable-binary \
		--with-blas=openblas \
		--with-lapack=openblas
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
064e3558c95ca90def249ccd6bae4d6faf24dfaaa21344b1603bd314e520d9904b9cc3c66909d64f59faa2aec5136a14be951bf87f4ab79b057e2f9c5be223f6  meep-1.31.0.tar.gz
"
