# Contributor: Wen Heping <wenhepingalpine@sohu.com>
# Maintainer: Wen Heping <wenhepingalpine@sohu.com>
pkgname=perl-io-interactive
pkgver=1.027
pkgrel=0
# _pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=IO-Interactive
pkgdesc="Utilities for interactive I/O"
url="https://metacpan.org/release/IO-Interactive/"
arch="noarch"
license="Artistic-2.0"
depends="perl"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/B/BR/BRIANDFOY/IO-Interactive-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL \
		INSTALLDIRS=vendor \
		NO_PACKLIST=1 \
		NO_PERLLOCAL=1
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
a3d23a9e54d4c75edc93e182db87184dedc1e50357a388ed0e3d93961576e437160fdbb194c3e5c86f74ba321948192c254e33ad469af06e0c90eeaa56ca7e9f  IO-Interactive-1.027.tar.gz
"
