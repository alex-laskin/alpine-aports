# Maintainer: Pedro Filipe <xpecex@outlook.com>
pkgname=gobuster
pkgver=3.8.0
pkgrel=2
pkgdesc="Directory/File, DNS and VHost busting tool written in Go"
url="https://github.com/OJ/gobuster"
arch="all"
license="Apache-2.0"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/OJ/gobuster/archive/v$pkgver.tar.gz"

export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build -o build/gobuster
}

check() {
	go test -v ./...
}

package() {
	install -Dm755 "./build/gobuster" "$pkgdir/usr/bin/gobuster"
}

sha512sums="
bec865ca870f8b91d5ff1c986c0e0170f05a76b6d85dcb92cabf9531ecf0e1c0577e6443dc5526930eb880afabd35714a6aa4ae6f5320ff593d392e0cac7de5b  gobuster-3.8.0.tar.gz
"
