maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=pyonji
pkgver=0.1.0
pkgrel=10
pkgdesc="Easy-to-use tool to send e-mail patches"
url="https://git.sr.ht/~emersion/pyonji"
arch="all"
license="GPL-3.0-only"
depends="git"
makedepends="go"
source="$pkgname-$pkgver-1.tar.gz::https://git.sr.ht/~emersion/pyonji/archive/v$pkgver.tar.gz"
options="net" # downloading go modukes
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	go build
}

check() {
	go test ./...
}

package() {
	install -Dm755 pyonji \
		-t "$pkgdir"/usr/bin/
}

