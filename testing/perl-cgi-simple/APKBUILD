# Contributor: Wen Heping <wenheping2000@hotmail.com>
# Maintainer: Wen Heping <wenheping2000@hotmail.com>
pkgname=perl-cgi-simple
pkgver=1.282
pkgrel=0
#_pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=CGI-Simple
pkgdesc="A Simple totally OO CGI interface that is CGI.pm compliant"
url="https://metacpan.org/release/CGI-Simple/"
arch="noarch"
license="GPL-1.0-or-later OR Artistic-1.0-Perl"
depends="perl"
checkdepends="perl-test-exception perl-test-nowarnings"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/M/MA/MANWAR/CGI-Simple-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL \
		INSTALLDIRS=vendor \
		NO_PACKLIST=1 \
		NO_PERLLOCAL=1
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
6759fc37beefacf7043bdc9695aa178d792536031ce26176eec3daf8ccc7fc5c18d02e2e42e2f16becaf7035f6c48fc31fdb9fceac99349ea72238adcd48cf3a  CGI-Simple-1.282.tar.gz
"
