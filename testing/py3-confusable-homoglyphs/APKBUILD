# Contributor: Wen Heping <wenhepingalpine@sohu.com>
# Maintainer: Wen Heping <wenhepingalpine@sohu.com>
pkgname=py3-confusable-homoglyphs
pkgver=3.3.1
pkgrel=0
# _pkgreal is used by apkbuild-pypi to find modules at PyPI
_pkgreal=confusable-homoglyphs
pkgdesc="Detect confusable usage of unicode homoglyphs, prevent homograph attacks."
url="https://pypi.org/project/confusable-homoglyphs/"
arch="noarch"
license="MIT"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-click py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/c/confusable-homoglyphs/confusable_homoglyphs-$pkgver.tar.gz"
builddir="$srcdir/confusable_homoglyphs-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
c6032479025caa779c79761fc6b34e5b5adab3d784bfe03282b7f5edc7701366ee7897bd4e8a4c264e7a06a59f075ac876bd47fa328accfe981944e70092d40d  confusable_homoglyphs-3.3.1.tar.gz
"
