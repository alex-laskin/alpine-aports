pkgname=font-andika-six
pkgver=6.210
pkgrel=0
pkgdesc="A sans-serif font family optimized for literacy use (compatible with v6.200)"
url="https://software.sil.org/andika/"
arch="noarch"
license="OFL-1.1-RFN"
source="https://github.com/silnrsi/font-andika/releases/download/v$pkgver-six/AndikaSix-$pkgver.tar.xz"
builddir="$srcdir/AndikaSix-$pkgver"
options="!check" # no test suite

package() {
	install -Dm644 "$builddir"/*.ttf \
		-t "$pkgdir"/usr/share/fonts/${pkgname#font-}
}

sha512sums="
