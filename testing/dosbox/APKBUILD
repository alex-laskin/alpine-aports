# Maintainer: Alex Laskin <alex@lask.in>

pkgname=dosbox
pkgver=0.74
pkgrel=7
pkgdesc="DOSBox emulates a full x86 pc with sound and DOS"
url="https://sourceforge.net/projects/dosbox/"
arch="all"
license="GPL-2.0"
options="!check"
subpackages="$pkgname-doc"
depends="sdl"
makedepends="linux-headers sdl-dev"
source="https://downloads.sourceforge.net/project/$pkgname/$pkgname/$pkgver/$pkgname-$pkgver.tar.gz
	01-gcc-compat.patch"

build() {
        cd "$builddir"
        ./configure \
		--prefix=/usr \
                --sysconfdir=/etc \
                --localstatedir=/var/lib
        make
}

package() {
        cd "$builddir"
        make DESTDIR="$pkgdir" install
}
