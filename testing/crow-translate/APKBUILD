# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-other
maintainer="team/kde <bribbers@disroot.org>"
pkgname=crow-translate
pkgver=4.0.2
pkgrel=0
# armhf, x86 and ppc64le blocked by tesseract-ocr
# s390x blocked by onnxruntime
arch="all !armhf !x86 !ppc64le !s390x"
url="https://apps.kde.org/crowtranslate/"
pkgdesc="Allows you to translate and speak text using Mozhi"
license="GPL-3.0-or-later"
depends="espeak-ng"
makedepends="$depends_dev
	extra-cmake-modules
	kwayland-dev
	onnxruntime-dev
	qt6-qtbase-dev
	qt6-qtscxml-dev
	qt6-qtspeech-dev
	qt6-qttools-dev
	tesseract-ocr-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/office/crow-translate.git"
source="https://download.kde.org/stable/crow-translate/$pkgver/crow-translate-$pkgver.tar.gz"
options="!check" # No tests
builddir="$srcdir/$pkgname"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
5ec505522386afd1c2c350e5180dcbbdc4b63e021223d8f7c52150a2f7db3311a1c102678a5b4c7923f541deb06ea2e38365236f6f3385a902672b85b3a7ed0b  crow-translate-4.0.2.tar.gz
"
