# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=pop-launcher
pkgver=1.2.7
pkgrel=0
pkgdesc="Modular IPC-based desktop launcher service"
url="https://github.com/pop-os/launcher"
arch="all"
license="MPL-2.0 AND GPL-3.0-only"
depends="
	fd
	xdg-utils
"
makedepends="
	cargo
	coreutils
	clang-libclang
	dbus-dev
	just
	libxkbcommon-dev
	mesa-dev
"
options="net !check"  # fetch dependencies, no tests
source="$pkgname-$pkgver.tar.gz::https://github.com/pop-os/launcher/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/launcher-$pkgver"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	just build-release --frozen
}

check() {
	cargo test --release --frozen
}

package() {
	just rootdir="$pkgdir" install
}

sha512sums="
6504e44fd472b2124d86f8ee8e8217bf081c6d4faa134b14c28a79f439b1dbfa77f52fe79b3d1741ef418bdac81e62636d5df3a89cccaf12fdf658063cd3e364  pop-launcher-1.2.7.tar.gz
"
