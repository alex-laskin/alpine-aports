# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=oniux
pkgver=0.6.1
pkgrel=0
pkgdesc="Linux namespace Tor isolation for any program (except libcurl/c-ares dependants)"
url="https://gitlab.torproject.org/tpo/core/oniux"
license="Apache-2.0"
# s390x: merlin crate doesn't support big-endian targets
arch="all !s390x"
makedepends="cargo
	cargo-auditable
	openssl-dev>3
	sqlite-dev
	xz-dev
	zstd-dev
	"
subpackages="$pkgname-doc"
source="https://gitlab.torproject.org/tpo/core/oniux/-/archive/v$pkgver/oniux-v$pkgver.tar.gz
	downgrade-libc_patch
	"
builddir="$srcdir/$pkgname-v$pkgver"

case "$CARCH" in
arm*|loongarch64|ppc64le|riscv64|s390x|x86)
	# for aws-lc-sys
	makedepends="$makedepends cmake clang-dev"
	;;
esac

export OPENSSL_NO_VENDOR=1

prepare() {
	default_prepare

	case "$CARCH" in
	loongarch64)
		patch Cargo.lock \
		"$srcdir"/downgrade-libc_patch
		;;
	esac

	cargo fetch --target="$CTARGET" --locked

	# Build against system-provided libs
	mkdir -p .cargo
	cat >> .cargo/config.toml <<-EOF
		[target.$CHOST]
		zstd = { rustc-link-lib = ["zstd"] }
	EOF
}

build() {
	cargo auditable build --release --frozen
}

check() {
	./target/release/"$pkgname" --help

	# when using oniux in CI:
	# Error: EPERM: Operation not permitted
}

package() {
	install -Dm755 -t "$pkgdir"/usr/bin/ target/release/oniux
	install -Dm755 -t "$pkgdir"/usr/share/doc/"$pkgname"/ README.md
}

sha512sums="
e2e40a6ff4cb44898da4e7de165699372d6708f990519d4db60f73219903c6db50424a22a0e35bae073ddf1798dccefba7bfb8b9a734fe39346ebd7bad14f350  oniux-v0.6.1.tar.gz
8d3f3aa3fa60f5dbd0cb1f58b83f1532da8fa31386b2b85f05c875504bcac099676bae5ad464a65139f67468ae5dd545c09b8882063ca20284cd6d504a98e62e  downgrade-libc_patch
"
