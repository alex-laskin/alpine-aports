# Contributor: Wen Heping <wenhepingalpine@sohu.com>
# Maintainer: Wen Heping <wenhepingalpine@sohu.com>
pkgname=perl-module-extract-version
pkgver=1.119
pkgrel=0
# _pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=Module-Extract-VERSION
pkgdesc="Extract a module version safely"
url="https://metacpan.org/release/Module-Extract-VERSION/"
arch="noarch"
license="Artistic-2.0"
depends="perl"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/B/BR/BRIANDFOY/Module-Extract-VERSION-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL \
		INSTALLDIRS=vendor \
		NO_PACKLIST=1 \
		NO_PERLLOCAL=1
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
4d026ab6716307f40a2f26dd3378d97ecdb9dfb267e71a017d87db07e7b25c96aa974c6e75982cfb3035f96c4b65aff3f52a318805ff457bdd28768a77bed0b6  Module-Extract-VERSION-1.119.tar.gz
"
