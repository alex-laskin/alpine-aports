maintainer="Sodface <sod@sodface.com>"
pkgname=pikchr-cmd
pkgver=1.0.0
pkgrel=0
pkgdesc="Pikchr command-line tool"
url="https://zenomt.github.io/pikchr-cmd/"
arch="all"
license="MIT"
options="!check" # no test suite
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/zenomt/pikchr-cmd/archive/refs/tags/v$pkgver.tar.gz"

build() {
	sed -i 's/^CFLAGS =/CFLAGS +=/' Makefile
	make
}

package() {
	install -Dm755 pikchr "$pkgdir"/usr/bin/pikchr
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
db5fffe0daf581bcd4e48bbe027ac5888b587bffd752f8e4eddc935695a8c012fd3078ba4e8395c13046ca9351e11acfdb68f8d1a8ae2d40f83d1d9c866fcded  pikchr-cmd-1.0.0.tar.gz
"
