# Maintainer: Oleg Titov <oleg.titov@gmail.com>
pkgname=py3-wikipedia
pkgver=1.4.0
pkgrel=0
pkgdesc="A Pythonic wrapper for the Wikipedia API"
url="https://pypi.org/project/wikipedia/"
arch="noarch"
license="MIT"
depends="py3-beautifulsoup4 py3-requests"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
subpackages="$pkgname-doc $pkgname-pyc"
source="py3-wikipedia-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/w/wikipedia/wikipedia-$pkgver.tar.gz"
builddir="$srcdir/wikipedia-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --system-site-packages testenv
	testenv/bin/python3 -m installer dist/*.whl
	testenv/bin/python3 -m unittest discover tests/ '*test.py'
}

package() {
	python3 -m installer -d "$pkgdir" \
		dist/*.whl

	install -Dm644 README.rst -t "$pkgdir"/usr/share/doc/"$pkgname"
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/"$pkgname"
}

sha512sums="
56d3382c784fd16205edc5b6f34a8bac5b6fefc21856993413ba339e9e9016b9b65602ed8eaeb1fe593f8eafc6b7b049dba14427cf08e08aabc03fd971504418  py3-wikipedia-1.4.0.tar.gz
"
