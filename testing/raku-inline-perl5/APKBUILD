# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=raku-inline-perl5
pkgver=0.60_git20250327
_gitrev=92806276f0ca964d168e8b9793066d180fa5c8e3
pkgrel=1
pkgdesc="Use Perl 5 code in a Raku program"
url="https://github.com/niner/Inline-Perl5"
# aarch64, riscv64: tests pass in CI but fail on the builders
arch="all !aarch64 !riscv64"
license="Artistic-2.0"
depends="rakudo"
makedepends="
	moarvm-dev
	perl-dev
	rakudo-dev
	raku-distribution-builder-makefromjson
	"
checkdepends="
	perl-utils
	raku-file-temp
	"
subpackages="$pkgname-doc"
source="$pkgname-$_gitrev.tar.gz::https://github.com/niner/Inline-Perl5/archive/$_gitrev.tar.gz"
builddir="$srcdir/Inline-Perl5-$_gitrev"
options="!archcheck" # Precompiled arch dependent files included (quiet noarch warning)

build() {
	RAKUDO_RERESOLVE_DEPENDENCIES=0 \
	/usr/share/rakudo/tools/install-dist.raku \
		--to=output --for=vendor
}

check() {
	local i; for i in $(seq 0 3); do
		[ $i -eq 0 ] || msg "Retrying ($i/3)..."
		prove -e 'raku -Ilib' && return 0
		sleep 1
	done
	return 1
}

package() {
	mkdir -p "$pkgdir"/usr/share/rakudo
	cp -RT output "$pkgdir"/usr/share/rakudo/vendor

	install -Dvm644 META6.json README.md \
		-t "$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
e4d23b5e6319c1747750b5a3c3152395a37ce36c568b58414c172775b5d207ca370d149c7664ec1d3152cab7ea3b4d238ea1bf6a27d38968866482b48ba3dd71  raku-inline-perl5-92806276f0ca964d168e8b9793066d180fa5c8e3.tar.gz
"
