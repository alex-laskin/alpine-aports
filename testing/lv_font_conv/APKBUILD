maintainer="Hugo Osvaldo Barrera <hugo@whynothugo.nl>"
pkgname=lv_font_conv
pkgver=1.5.3
pkgrel=0
pkgdesc="Rasterize vector fonts for embedded use"
url="https://github.com/lvgl/lv_font_conv"
arch="noarch"
license="MIT"
depends="nodejs"
checkdepends="eslint" # and moreâ€¦
makedepends="npm"
subpackages="$pkgname-doc"
source="https://registry.npmjs.org/lv_font_conv/-/lv_font_conv-$pkgver.tgz"
# check: missing checkdepends
# net: fetch dependencies
options="!check net"
builddir="$srcdir/package/"

build() {
	npm install --omit=dev
}

check() {
	npm test
}

package() {
	install -d "$pkgdir"/usr/bin "$pkgdir"/usr/lib/node_modules/$pkgname
	cp -a lib node_modules package*.json lv_font_conv.js \
		"$pkgdir"/usr/lib/node_modules/$pkgname
	ln -s ../lib/node_modules/lv_font_conv/lv_font_conv.js "$pkgdir"/usr/bin/lv_font_conv

	install -Dm644 README.md -t "$pkgdir/usr/share/doc/$pkgname/"
	install -Dm644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}

sha512sums="
d312504e104ec368a9b4571c497aca0c8513400c2bff6ce12a3088d65013211819a3cbaf6114e67a729a7d6f724f0e86d32e40c96d34b6a1a952d62e4ee0486d  lv_font_conv-1.5.3.tgz
"
