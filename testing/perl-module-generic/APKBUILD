	# fails in CI, but fine when run locally
	rm -v t/04.colour.t
}

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL \
		INSTALLDIRS=vendor \
		NO_PACKLIST=1 \
		NO_PERLLOCAL=1
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	LC_ALL=C TERM=linux TZ=UTC make test
}

package() {
	make DESTDIR="$pkgdir" install
}

doc() {
	local file; find . -name "*.pod" | while read -r file; do
		amove "$file"
	done
	default_doc
}

