# Contributor: Wen Heping <wenhepingalpine@sohu.com>
# Maintainer: Wen Heping <wenhepingalpine@sohu.com>
pkgname=perl-cpan-audit
pkgver=20250829.001
pkgrel=0
# _pkgreal is used by apkbuild-cpan to find modules at MetaCpan
_pkgreal=CPAN-Audit
pkgdesc="Audit CPAN distributions for known vulnerabilities"
url="https://metacpan.org/release/CPAN-Audit/"
arch="noarch"
license="GPL-1.0-or-later OR Artistic-1.0-Perl"
depends="
	perl perl-cpan-distnameinfo perl-cpansa-db perl-io-interactive perl-json perl-module-cpanfile
	perl-module-extract-version perl-io-gzip
	"
checkdepends="perl-capture-tiny"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/B/BR/BRIANDFOY/CPAN-Audit-$pkgver.tar.gz"
builddir="$srcdir/$_pkgreal-$pkgver"

build() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	PERL_MM_USE_DEFAULT=1 perl -I. Makefile.PL \
		INSTALLDIRS=vendor \
		NO_PACKLIST=1 \
		NO_PERLLOCAL=1
	make
}

check() {
	export CFLAGS=$(perl -MConfig -E 'say $Config{ccflags}')
	make test
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
c658a382c52d0b82b1ca3df7f85bda6422afd5c17d0fcdb2db183e73d7a215410adc994cb5ccc629e06fa5a69fa845af2a6b18fa7e6666073779e5bad59449f0  CPAN-Audit-20250829.001.tar.gz
"
