pkgname=maildir-rank-addr
pkgver=1.4.1
pkgrel=0
pkgdesc="Creates a ranked list of email addresses from maildir folders"
url="https://github.com/ferdinandyb/maildir-rank-addr"
arch="all"
license="MIT"
makedepends="go"
subpackages="$pkgname-doc"
source="https://github.com/ferdinandyb/maildir-rank-addr/archive/v$pkgver/maildir-rank-addr-$pkgver.tar.gz"
options="net"

build() {
	go build
}

check() {
	go test -v ./...
}

package() {
	install -Dm755 maildir-rank-addr "$pkgdir"/usr/bin/maildir-rank-addr
	install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}

