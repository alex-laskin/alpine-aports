# Maintainer: Dylan Van Assche <dylan@postmarketos.org>
# Contributor: Dylan Van Assche <dylan@postmarketos.org>
pkgname=certbot-dns-hetzner
pkgver=2.0.1
pkgrel=1
pkgdesc="Certbot DNS Authenticator for Hetzner"
url="https://github.com/ctrlaltcoop/certbot-dns-hetzner"
arch="noarch"
license="Apache-2.0"
depends="
	certbot
	py3-tldextract
	py3-dns-lexicon
	"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="https://github.com/ctrlaltcoop/certbot-dns-hetzner/archive/v$pkgver/certbot-dns-pdns-$pkgver.tar.gz"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
a4ad265f6e7fc166f451399687e0d3612e1f610233ab7481b8e0426b361e1d9cc62a4e4ebdb50c2f057d3ab3887137566c2abc388d302e047f8ec9f13b0b6cfc  certbot-dns-pdns-2.0.1.tar.gz
"
