pkgname=hiprompt-gtk
pkgver=0.9
pkgrel=0
pkgdesc="GTK4 prompter for Himitsu"
url="https://git.sr.ht/~sircmpwn/hiprompt-gtk"
# riscv64,aarch64: hare does not support PIE, but it seems to be required to access libc's environ variable
arch="x86_64" # blocked by hare
license="GPL-3.0-only"
makedepends="hare hare-adwaita hare-gi hare-gtk4-layer-shell himitsu-dev"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/hiprompt-gtk/archive/$pkgver.tar.gz"
options="!check" # no test suite

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

sha512sums="
