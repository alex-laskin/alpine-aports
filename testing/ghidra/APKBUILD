0c2a1e9c953f2d4580abbe1235fba418ecb2f6cc7a1902dae593c947fb3e3c5754587bd347587ff5235c61f609422faef56dcc492320b6c257fc97cc8debc4e6  use-system-protoc.patch
508348ed3f561301e99eac2e91b2a9f63f1adbe8251c9368a47baa2b53e0cdb8d170537e4df89df9a1d3b5998d8e9d31ce3c3904c2f8a26a2978a535efa0daa3  gcc15.patch
b075d5ac821bf4ed052acada45b882876a5493ab03cfa4d0537c4c5f27b666aa2b37de9ff561313b025f9d16b06b9ad17d59287ecf205c02798dbca2bc04925f  ghidra.sh
