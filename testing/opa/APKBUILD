2cf0049bf56e17c112cbe0002f89129093d9fcaeaf41c591d9e9f9f1f365f693fc1ba16e4bd24578163f0106cc75be905ae6f4be7222226444a5b908e77d01aa  update-wasmtime-go.patch
4e131d1cb38168610f4093030f5af304149e5f49e017654ed8e609177b225b40aee85781bfb4f5e47b62d6635cff025899ed138c41779791f401c893b4437b1a  fix-prometheus-test.patch
"
