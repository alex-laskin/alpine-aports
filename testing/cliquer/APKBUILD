# Contributor: Grigory Kirillov <txgk@bk.ru>
# Maintainer:
pkgname=cliquer
pkgver=1.23
pkgrel=0
pkgdesc="Set of C routines for finding cliques in an arbitrary weighted graph"
url="https://github.com/dimpase/autocliquer"
arch="all"
license="GPL-2.0-or-later"
subpackages="
	$pkgname-tests
	$pkgname-static
	$pkgname-libs
	$pkgname-dev
	"
source="https://github.com/dimpase/autocliquer/releases/download/v$pkgver/cliquer-$pkgver.tar.gz"

build() {
	export CFLAGS="${CFLAGS/-Os/-O3}" # gotta go fast

	./configure \
		--target="$CTARGET" \
		--build="$CBUILD" \
		--host="$CHOST" \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

tests() {
	pkgdesc="$pkgdesc (tests)"

	amove usr/share
}

sha512sums="
ba3af2de31bfc34a742af7ee6edead648b0acc2b47c2afcc3a408ffb651c4d424778bf1aa41dd843a3028c7d30f4daa15b15964b8fac2e1b36686eebc85acf3c  cliquer-1.23.tar.gz
"
