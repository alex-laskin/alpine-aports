pkgname=hare-adwaita
pkgver=0.1.0
pkgrel=0
pkgdesc="Hare bindings for libadwaita"
url="https://git.sr.ht/~sircmpwn/hare-adwaita/"
arch="noarch !armhf !armv7 !ppc64le !s390x !x86 !loongarch64" # blocked by hare
license="MPL-2.0"
depends="hare hare-gi libadwaita-dev"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/hare-adwaita/archive/$pkgver.tar.gz"
options="!check" # no test suite

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

sha512sums="
