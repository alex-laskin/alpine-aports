# Contributor: Angelo Verlain <hey@vixalien.com>
# Maintainer: Angelo Verlain <hey@vixalien.com>
pkgname=elementary-camera
pkgver=8.0.2
pkgrel=0
pkgdesc="Camera app designed for elementary OS"
url="https://github.com/elementary/camera"
arch="all"
license="GPL-3.0-or-later"
depends="gst-plugins-rs-gtk4"
makedepends="
	libcanberra-dev
	granite7-dev
	gstreamer-dev
	gst-plugins-base-dev
	gtk4.0-dev
	meson
	vala
	"
subpackages="$pkgname-lang"
source="$pkgname-$pkgver.tar.gz::https://github.com/elementary/camera/archive/refs/tags/$pkgver.tar.gz"

builddir="$srcdir/camera-$pkgver"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
21bb3a102177d007b70ab186c6f2e9e9e1a73688f748d612b342105e4e8a2f94d99c314de3c4ebf4732ce7090cf49353966e59babf60c4f6c015578666eaa848  elementary-camera-8.0.2.tar.gz
"
