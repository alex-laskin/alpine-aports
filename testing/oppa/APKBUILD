# Contributor: Coco Liliace <coco@liliace.dev>
# Maintainer: Coco Liliace <coco@liliace.dev>
pkgname=oppa
pkgver=1.1.0
pkgrel=0
pkgdesc="A preprocessor for OpenAPI files"
url="https://sr.ht/~liliace/oppa/"
arch="all"
license="MPL-2.0"
makedepends="cargo cargo-auditable"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~liliace/oppa/archive/$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --locked --target="$CTARGET"
}

build() {
	cargo auditable build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 -t "$pkgdir"/usr/bin ./target/release/oppa
}

sha512sums="
2eaafd9a80b7e33bc6fe2d2a385b393deb1bba634bfcf6c62be1cde2a8cd318056b8fa8250950360fbcdb67e05b5e1da5d92fef7a884aba4970efa9c0e327f28  oppa-1.1.0.tar.gz
"
