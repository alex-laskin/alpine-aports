maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-prefixed
pkgver=0.9.0
pkgrel=0
pkgdesc="Prefixed alternative numeric library"
url="https://github.com/Rockhopper-Technologies/prefixed"
arch="noarch"
license="MPL-2.0"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/Rockhopper-Technologies/prefixed/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/prefixed-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
d428b631b54c2b8c8d9d56e68f4fafd127df1f486181ef1f9ad1d3c2194959c9f572c9a2a9e3c0f7ff648bf82b8b8480f9911bab9426112ffef5f4d8066f3d98  py3-prefixed-0.9.0.tar.gz
"
