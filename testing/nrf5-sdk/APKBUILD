maintainer="Hugo Osvaldo Barrera <hugo@whynothugo.nl>"
pkgname=nrf5-sdk
_pkgver=17.1.0-ddde560
pkgver=${_pkgver%%-*}
pkgrel=0
pkgdesc="SDK for the nRF52 Series and nRF51 Series SoCs"
url="https://github.com/nobodywasishere/nrf5-sdk"
arch="all"
# LicenseRef-Nordic-nRF5-SDK AND LicenseRef-Garmin-Canada-nRF5 AND LicenseRef-Nordic-SoftDevice AND BSD-3-Clause AND MIT AND LicenseRef-ThirdParty
license="custom"
depends="bash python3 perl" # package includes scripts
subpackages="$pkgname-doc"
source="$pkgname-$_pkgver.tar.gz::https://github.com/nobodywasishere/nrf5-sdk/archive/v$_pkgver.tar.gz"
options="!check" # no tests
builddir="$srcdir/nRF5-SDK-$_pkgver"

package() {
	install -d "$pkgdir/usr/share/$pkgname"
	mv components config external external_tools integration modules \
		"$pkgdir/usr/share/$pkgname"

	install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname/" \
		documentation/licenses.txt \
		documentation/nRF5_Nordic_license.txt \
		documentation/nRF5_Garmin_Canada_license.txt
}

sha512sums="
