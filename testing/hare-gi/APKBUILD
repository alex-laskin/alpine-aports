pkgname=hare-gi
pkgver=0.1.0
pkgrel=0
pkgdesc="GObject Instrospection code generator for Hare"
url="https://sr.ht/~yerinalexey/hare-gi/"
arch="x86_64 aarch64 riscv64" # blocked by hare
license="MPL-2.0"
depends="gobject-introspection-dev gtk+3.0-dev gtk4.0-dev hare"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~yerinalexey/hare-gi/archive/$pkgver.tar.gz"
options="!check" # no test suite

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

