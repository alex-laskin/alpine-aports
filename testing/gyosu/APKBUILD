pkgrel=2
pkgdesc="simple C documentation generator"
url="https://codeberg.org/emersion/gyosu"
arch="all"
license="AGPL-3.0-only"
makedepends="go"
source="https://codeberg.org/emersion/gyosu/releases/download/v$pkgver/gyosu-$pkgver.tar.gz"
options="net !check" # no test suite

build() {
	go build .
}

package() {
	install -Dm755 gyosu -t "$pkgdir"/usr/bin
}

