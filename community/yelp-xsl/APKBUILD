# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: team/gnome <alacerda@alpinelinux.org>
pkgname=yelp-xsl
pkgver=49.0
pkgrel=0
pkgdesc="XSL stylesheets for the yelp help browser"
url="https://gitlab.gnome.org/GNOME/yelp-xsl"
arch="noarch"
license="GPL-2.0-or-later AND LGPL-2.1-or-later AND MIT"
makedepends="
	bash
	intltool
	itstool
	libxml2-utils
	libxslt
	meson
	"
options="!check" # no tests
source="https://download.gnome.org/sources/yelp-xsl/${pkgver%.*}/yelp-xsl-$pkgver.tar.xz"

# secfixes:
#   42.1-r3:
#     - CVE-2025-3155

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
0a79fa988673276f14cc9fbe9a18fbf63cd8d4864451af447d7353e8d03630525bf5905fc42bf68f7b6f4326f3fed69874b4c0d587289a4e173faf191ac071ff  yelp-xsl-49.0.tar.xz
"
