# Contributor: Matthias Ahouansou <matthias@ahouansou.cz>
maintainer="Matthias Ahouansou <matthias@ahouansou.cz>"
pkgname=cargo-insta
pkgver=1.43.2
pkgrel=0
pkgdesc="review tool for insta, a snapshot testing library for Rust"
url="https://github.com/mitsuhiko/insta"
arch="all"
license="Apache-2.0"
makedepends="cargo-auditable"
subpackages="$pkgname-doc"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/mitsuhiko/insta/archive/refs/tags/$pkgver.tar.gz
"
options="net"
builddir="$srcdir/insta-$pkgver"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen -p cargo-insta
}

check() {
	cargo test --frozen -p cargo-insta
}

package() {
	install -Dm 755 target/release/cargo-insta "$pkgdir"/usr/bin/cargo-insta

	install -Dm 644 LICENSE -t "$pkgdir"/usr/share/licenses/"$pkgname"/
}

sha512sums="
14c756059490da815cb740c78821bf2bd0e7941ad77b2ee7abd22753b323902143ded91c25524259984b99533a07d26a31d4b1fe154424082cc9a9ea77045d28  cargo-insta-1.43.2.tar.gz
"
