# Contributor: Aiden Grossman <agrossman154@yahoo.com>
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=jupyter-nbclassic
pkgver=1.3.3
pkgrel=0
pkgdesc="Jupyter notebook as jupyter server extension"
url="https://github.com/jupyter/nbclassic"
arch="noarch !armhf !armv7 !x86 !loongarch64 !riscv64 !s390x !ppc64le !riscv64" # jupyter-server
license="BSD-3-Clause"
depends="py3-traitlets jupyter-server jupyter-notebook-shim"
makedepends="py3-gpep517 py3-hatchling py3-hatch-jupyter-builder py3-babel"
checkdepends="py3-pytest py3-pytest-tornasync py3-pytest-jupyter"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/jupyter/nbclassic/releases/download/v$pkgver/nbclassic-$pkgver.tar.gz"
builddir="$srcdir/nbclassic-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
c973702164bc8ffc5b0e0bddd94b4ec93b12d1ab0aab25263be84e1111fedc671e2007e8c31a410ea037fb69ec8318b783c2504632545355580a48fdbe31e00d  jupyter-nbclassic-1.3.3.tar.gz
"
