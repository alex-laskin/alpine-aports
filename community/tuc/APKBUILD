maintainer="Michał Polański <michal@polanski.me>"
pkgname=tuc
pkgver=1.3.0
pkgrel=0
pkgdesc="When cut doesn't cut it"
url="https://github.com/riquito/tuc"
license="GPL-3.0-or-later"
arch="all"
makedepends="cargo cargo-auditable"
source="https://github.com/riquito/tuc/archive/v$pkgver/tuc-$pkgver.tar.gz"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}

sha512sums="
da64cffa388d032576b1f96f13d20c1ee657cd99eba0d1b0252dcc133bcd5b2de49007a30c426760d845dbd5ddf23ab7b81ebb83bce4eba7f40d25712f539ddf  tuc-1.3.0.tar.gz
"
