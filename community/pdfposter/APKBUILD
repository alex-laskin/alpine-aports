# Contributor: Aiden Grossman <agrossman154@yahoo.com>
# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=pdfposter
pkgver=0.9.1
pkgrel=0
pkgdesc="Tool for scaling and tiling PDFs to multiple pages for printing"
url="https://gitlab.com/pdftools/pdfposter"
arch="noarch"
license="GPL-3.0-only"
depends="py3-pypdf"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://gitlab.com/pdftools/pdfposter/-/archive/v$pkgver/pdfposter-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest test/unit
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
7c655a3fde6f04cf4fe9af6f2443a5671c939fc26419ffff8f6dd7afbd9f5575c9520213231921402b478311c3767a62f8f4ab1909a6d4fc2c3bbd267e346db3  pdfposter-v0.9.1.tar.gz
"
