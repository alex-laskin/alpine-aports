# Maintainer: Alex Xu (Hello71) <alex_y_xu@yahoo.ca>
pkgname=highway
pkgver=1.3.0
pkgrel=0
pkgdesc="Performance-portable, length-agnostic SIMD with runtime dispatch"
url="https://github.com/google/highway"
arch="all"
license="Apache-2.0"
makedepends="cmake gtest-dev linux-headers samurai"
subpackages="
	$pkgname-dev
	libhwy
	libhwy_contrib
	libhwy_test
	"
source="https://github.com/google/highway/archive/$pkgver/highway-$pkgver.tar.gz"

case "$CARCH" in
	# ppc64le: detects PPC9 as baseline on the builder cpu, even though actually PPC8
	# aarch64|loongarch64: ICE
	ppc64le|aarch64|loongarch64) options="!check" ;;
esac

build() {
	export CFLAGS="$CFLAGS -flto=auto"
	export CXXFLAGS="$CXXFLAGS -flto=auto"

	CFLAGS="$CFLAGS -O2 -DNDEBUG" \
	CXXFLAGS="$CXXFLAGS -O2 -DNDEBUG" \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=ON \
		-DBUILD_TESTING="$(want_check && echo ON || echo OFF)" \
		-DHWY_SYSTEM_GTEST=ON \
		-DHWY_CMAKE_RVV=OFF \
		-DHWY_ENABLE_EXAMPLES=OFF
	cmake --build build
}

check() {
	ctest --test-dir build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

libhwy() {
	amove usr/lib/libhwy.so.*
}

libhwy_contrib() {
	amove usr/lib/libhwy_contrib.so.*
}

libhwy_test() {
	amove usr/lib/libhwy_test.so.*
}

sha512sums="
8b9f4fdc4fa60b6817417959853f5b55bf86aec9d35fc6664dda15179cc55e0a9940f3a46011a84b95263ba342dc47ca1cb93b04481ff4b63d724cce1815d7c6  highway-1.3.0.tar.gz
"
