# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=ugm
pkgver=1.8.0
pkgrel=2
pkgdesc="A terminal based UNIX user and group browser"
url="https://github.com/ariasmn/ugm"
license="MIT"
arch="all"
makedepends="go"
options="!check" # no test files
source="$pkgname-$pkgver.tar.gz::https://github.com/ariasmn/ugm/archive/refs/tags/v$pkgver.tar.gz
	unbump_go.patch
	"

export GOFLAGS="$GOFLAGS -trimpath -mod=readonly -modcacherw"
export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	go build \
		-ldflags="-linkmode=external -extldflags \"$LDFLAGS\"" \
		-v .
}

package() {
	install -Dm0755 "$pkgname" -t "$pkgdir"/usr/bin
	install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
}

sha512sums="
ae7f34b1a6703b64c8b391a9a42de11406cda2c6b1eca37da97febf9e9561a85f5bc9bba1d5f619a4bcc442693fa9a27b3d05a6a6bb005402cbebb5d363d1057  ugm-1.8.0.tar.gz
c88168c785d9640b93520fadca6ca7e2c4da0ab81f3043719892f504622ce05f1585268006f42a48092f3371853fdcc98a43b0d650aa3d1d6cd2bd6be5b50e5e  unbump_go.patch
"
