maintainer="Michał Polański <michal@polanski.me>"
pkgname=cbonsai
pkgver=1.4.2
pkgrel=0
pkgdesc="Grow bonsai trees in your terminal"
url="https://gitlab.com/jallbrit/cbonsai"
license="GPL-3.0-only"
arch="all"
makedepends="ncurses-dev scdoc"
subpackages="$pkgname-bash-completion $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://gitlab.com/jallbrit/cbonsai/-/archive/v$pkgver/cbonsai-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"
options="!check" # no test suite

build() {
	make
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

