# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=gosec
pkgver=2.22.8
pkgrel=1
pkgdesc="Go source code static analyzer, focusing on security"
url="https://github.com/securego/gosec"
arch="all"
license="Apache-2.0"
makedepends="go"
source="$pkgname-$pkgver.tar.gz::https://github.com/securego/gosec/archive/refs/tags/v$pkgver.tar.gz"
# downloads go deps into GOBIN and runs them
options="!check net"

export GOBIN=/tmp
export GOCACHE="${GOCACHE:-"$srcdir/go-cache"}"
export GOTMPDIR="${GOTMPDIR:-"$srcdir"}"
export GOMODCACHE="${GOMODCACHE:-"$srcdir/go"}"

build() {
	make PREFIX="/usr" VERSION="$pkgver"
}

check() {
	make test
}

package() {
	install -Dm755 gosec -t "$pkgdir"/usr/bin
}

sha512sums="
db5c1397bf7f7f24994ec5aad69562d630205a6ac87f078f65f1b9e91d5c5c62be91a39feeed7094ae428a97dab928b6c83fe0672ccfcf7053e2a88a7d1a105d  gosec-2.22.8.tar.gz
"
