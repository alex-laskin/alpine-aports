# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=gnome-podcasts
pkgver=25.3
pkgrel=0
pkgdesc="Podcast app for GNOME"
url="https://apps.gnome.org/Podcasts"
arch="all"
license="GPL-3.0-or-later"
depends="gst-plugins-good"
makedepends="
	bash
	cargo
	dbus-dev
	desktop-file-utils
	gst-plugins-bad-dev
	gst-plugins-base-dev
	gstreamer-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	openssl-dev>3
	sqlite-dev
	"
checkdepends="
	appstream-glib
	xvfb-run
	"
options="net !check" # needs the thing to be installed first
subpackages="$pkgname-lang"
source="https://gitlab.gnome.org/World/podcasts/-/archive/$pkgver/podcasts-$pkgver.tar.gz"
builddir="$srcdir/podcasts-$pkgver"

prepare() {
	default_prepare

	sed 's| /bin/bash|/bin/sh|' -i scripts/test.sh
}

build() {
	# required for 32-bit systems to not run out of memory
	export CARGO_PROFILE_RELEASE_DEBUG=0
	abuild-meson . output
	meson compile -C output
}

check() {
	xvfb-run meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
57308cab6bfbc44b3bbad13ff690d8e73bb823515b933dff2917063739b34ddd79c7fdc794990b87a5cc2be6b4e8e28db86ed2acfef6e2706f15013364b5a400  podcasts-25.3.tar.gz
"
