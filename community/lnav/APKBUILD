maintainer="Celeste <cielesti@protonmail.com>"
pkgname=lnav
pkgver=0.13.2
pkgrel=0
_pkgver="${pkgver/_/-}"
pkgdesc="Advanced log file navigator and viewer"
url="https://lnav.org"
arch="all"
license="BSD-2-Clause"
depends="tzdata"
makedepends="
	bash
	bzip2-dev
	curl-dev
	gpm-dev
	libarchive-dev
	libbsd-dev
	libunistring-dev
	ncurses-dev
	pcre2-dev
	readline-dev
	sqlite-dev
	zlib-dev
	"
checkdepends="
	openssh-keygen
	xz
	"
subpackages="$pkgname-doc"
source="https://github.com/tstack/lnav/releases/download/v$_pkgver/lnav-$_pkgver.tar.gz"
builddir="$srcdir/$pkgname-${pkgver%_*}"
options="!check" # failed on some tests

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-tinfo
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
