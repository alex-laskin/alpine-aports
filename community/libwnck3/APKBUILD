# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Contributor: Sergey Lukin <sergej.lukin@gmail.com>
# Contributor: Leonardo Arena <rnalrd@alpinelinux.org>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libwnck3
pkgver=43.3
pkgrel=0
pkgdesc="Window Navigator Construction Kit"
url="https://gitlab.gnome.org/GNOME/libwnck"
arch="all"
license="LGPL-2.0-or-later"
subpackages="$pkgname-dev $pkgname-lang"
replaces="libwnck"
makedepends="
	cairo-dev
	glib-dev
	gobject-introspection-dev
	gtk+3.0-dev
	libx11-dev
	libxres-dev
	meson
	pango-dev
	startup-notification-dev
	"
options="!check" # no tests
source="https://download.gnome.org/sources/libwnck/${pkgver%.*}/libwnck-$pkgver.tar.xz"
builddir="$srcdir/libwnck-$pkgver"

build() {
	abuild-meson \
		-Db_lto=true \
		-Dgtk_doc=false \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
51304ab6ad543d10e8542257b24964dbce454eb1bedfa26fc926797b01373b9effad8097fe0f18216439d0339525377abb9e3c88b58cc2e7ed04832cb40a27ed  libwnck-43.3.tar.xz
"
