# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=cargo-seek
pkgver=0.1.0
pkgrel=0
pkgdesc="TUI for searching, adding and installing cargo crates"
arch="all"
url="https://github.com/tareqimbasher/cargo-seek"
license="MIT"
makedepends="cargo cargo-auditable openssl-dev"
subpackages="$pkgname-doc"
options="net" # cargo fetch
source="$pkgname-$pkgver.tar.gz::https://github.com/tareqimbasher/cargo-seek/archive/refs/tags/v$pkgver.tar.gz"

prepare() {
	default_prepare
	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --release --frozen
}

check() {
	cargo test --frozen
}

package() {
	install -Dm0755 target/release/cargo-seek -t "$pkgdir"/usr/bin/

	install -Dm0644 README.md -t "$pkgdir"/usr/share/doc/"$pkgname"/
	install -Dm0644 LICENSE -t "$pkgdir"/usr/share/licenses/"$pkgname"/
}

sha512sums="
b30f9e3cf656023d2758bff6620c06d5c93ac2b7cb64bb51210c213ac9204fb8650e15ccfd52b59b6bbddb9cdcb9d51643f1fcf7f052fc6ed9e22ab4d49f8894  cargo-seek-0.1.0.tar.gz
"
