# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=qt6
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qt6-qtgrpc
pkgver=6.9.3
pkgrel=0
pkgdesc="Providing protobuf and gRPC support for Qt"
url="https://qt.io/"
arch="all"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	protobuf-dev
	qt6-qtbase-dev
	qt6-qtbase-private-dev
	"
makedepends="$depends_dev
	cmake
	samurai
	"
case "$CARCH" in
	armhf) ;;
	*)
		depends_dev="$depends_dev qt6-qtdeclarative-dev"
		makedepends="$makedepends
			qt6-qtdeclarative-dev
			qt6-qtdeclarative-private-dev
			"
		;;
esac

subpackages="$pkgname-dev"
options="!check" # No tests
builddir="$srcdir/qtgrpc-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtgrpc-everywhere-src-${pkgver/_/-}.tar.xz"

build() {
	export CFLAGS="$CFLAGS -flto=auto"
	export CXXFLAGS="$CXXFLAGS -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_MESSAGE_LOG_LEVEL=STATUS
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	amove usr/lib/qt6/sbom
}

sha512sums="
cd7cfea30763f28ee25152c3da0151587f74f7a9e16625b2f04a257e042f3c2479fb1001aa725f70b3cd706efd28ce2afe53916521aa58edbbddf8f76bf720fa  qtgrpc-everywhere-src-6.9.3.tar.xz
"
