# Maintainer: Marian Buschsieweke <marian.buschsieweke@posteo.net>
pkgname=py3-pyperclip
_pkgname=pyperclip
pkgver=1.11.0
pkgrel=0
pkgdesc="Python module for copy and paste clipboard functions"
url="https://github.com/asweigart/pyperclip"
arch="noarch"
license="BSD-3-Clause"
depends="python3"
makedepends="
	py3-gpep517
	py3-setuptools
	"
checkdepends="
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="
	$pkgname-$pkgver.tar.gz::https://files.pythonhosted.org/packages/source/${_pkgname:0:1}/$_pkgname/$_pkgname-$pkgver.tar.gz

	40d1d3a154e1d87ac229d5b8b81ca403c45eb862.patch
	"
builddir="$srcdir"/${_pkgname/-/_}-$pkgver

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest \
		--deselect tests/test_pyperclip.py::TestXClip::test_non_str \
		--deselect tests/test_pyperclip.py::TestWlClipboard::test_non_str \
		#
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
3756e75db1dc321dafe3677956d6d84b7c730bfd282f0293931e7dc5a468f3abaf8397a5f02bee4473953026d0ac373b835fe1972b7f5fe69e661195007901ab  py3-pyperclip-1.11.0.tar.gz
53dd0fd8e0f051758118cacff606abed25ec79b4904840c082c741d3f9c2adb4c4b9d65f2da1f7b19197a3ba67a93e8e3aa31d58832b50e05eaec121da71b1a7  40d1d3a154e1d87ac229d5b8b81ca403c45eb862.patch
"
