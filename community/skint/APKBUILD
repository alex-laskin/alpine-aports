# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=skint
pkgver=0.6.8
pkgrel=0
pkgdesc="Cheap and fast R7RS Scheme interpreter"
url="https://github.com/false-schemers/skint"
arch="all"
license="BSD-3-Clause"
subpackages="$pkgname-doc"
source="https://github.com/false-schemers/skint/archive/refs/tags/v$pkgver/skint-$pkgver.tar.gz
	add-destdir-to-install.patch
	"

build() {
	sh ./configure --prefix=/usr
	make
}

check() {
	make test
	make libtest
}

package() {
	make DESTDIR="$pkgdir" install
	make DESTDIR="$pkgdir" libinstall
}

