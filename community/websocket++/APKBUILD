# Contributor: Carlo Landmeter <clandmeter@alpinelinux.org>
# Maintainer: prspkt <prspkt@protonmail.com>
pkgname=websocket++
pkgver=0.8.2
pkgrel=1
pkgdesc="C++/Boost Asio based websocket client/server library"
url="https://github.com/zaphoyd/websocketpp"
arch="all"
license="BSD-3-Clause"
makedepends="cmake samurai"
checkdepends="boost-dev"
source="$pkgname-$pkgver.tar.gz::https://github.com/zaphoyd/websocketpp/archive/$pkgver.tar.gz
	boost.patch
	"
builddir="$srcdir"/websocketpp-$pkgver

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake3.5 -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_BUILD_TYPE=None \
		-DBUILD_TESTS="$(want_check && echo TRUE || echo FALSE)" \
		$CMAKE_CROSSOPTS
	cmake --build build
}

check() {
	ctest --test-dir build -E test_transport_asio_timers
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
