maintainer="Celeste <cielesti@protonmail.com>"
pkgname=zathura
pkgver=0.5.14
pkgrel=0
pkgdesc="Highly customizable and functional document viewer"
url="https://pwmt.org/projects/zathura/"
arch="all"
license="Zlib"
makedepends="
	appstream
	check-dev
	file-dev
	girara-dev
	json-glib-dev
	libseccomp-dev
	muon
	ncurses
	py3-docutils
	py3-sphinx
	desktop-file-utils
	sqlite-dev
	"
checkdepends="
	dbus
	mesa-dri-gallium
	weston
	xvfb-run
	"
subpackages="
	$pkgname-doc
	$pkgname-dev
	$pkgname-lang
	$pkgname-bash-completion
	$pkgname-zsh-completion
	$pkgname-fish-completion
	"
source="https://pwmt.org/projects/zathura/download/zathura-$pkgver.tar.xz"

case "$CARCH" in
ppc64le|s390x|riscv64|loongarch64)
	_synctex=disabled
	;;
*)
	makedepends="$makedepends texlive-dev"
	_synctex=enabled
	;;
esac

build() {
	abuild-muon \
		-Dsynctex=$_synctex \
		-Dseccomp=enabled \
		-Dlandlock=enabled \
		-Dmanpages=enabled \
		-Dtests="$(want_check && echo enabled || echo disabled)" \
		-Dconvert-icon=disabled \
		build .
	ninja -C build
}

check() {
	xvfb-run -a muon -C build test -j "${JOBS:-0}" -R -d dots
}

package() {
	DESTDIR="$pkgdir" muon -C build install
}

sha512sums="
fb9d3089ee807865da7b1046eff7bf6d260e735474d63ef6f71e681a57b52421fdb83670e13c0e4e69be3f9b5895d3ea1b0288f13624a059c203f90df19c2d5d  zathura-0.5.14.tar.xz
"
