# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <pabloyoyoista@postmarketos.org>
pkgname=gnome-calculator
pkgver=49.1.1
pkgrel=0
pkgdesc="Calculator for solving mathematical equations"
url="https://apps.gnome.org/Calculator"
arch="all"
license="GPL-3.0-or-later"
makedepends="
	blueprint-compiler
	glib-dev
	gtksourceview5-dev
	gtk4.0-dev
	itstool
	libadwaita-dev
	libgee-dev
	libsoup3-dev
	libxml2-dev
	meson
	mpc1-dev
	mpfr-dev
	vala
	"
subpackages="$pkgname-devhelp $pkgname-doc $pkgname-lang $pkgname-dev"
source="https://download.gnome.org/sources/gnome-calculator/${pkgver%%.*}/gnome-calculator-$pkgver.tar.xz"

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

check() {
	# loongarch64, armhf, ppc64le and riscv64 timeouted number test with standard timeout
	meson test -t 10 --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
805d9f66aca320076d8229ab72be287962431598f9346f7ad132a8fc1cd3f3b7402c695ac5880427e32ae6024fb0ab1c0e57aac9c48f29cf5b6cc9fb0944a9e9  gnome-calculator-49.1.1.tar.xz
"
