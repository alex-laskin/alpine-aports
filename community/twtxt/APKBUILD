# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=twtxt
pkgver=1.3.1
pkgrel=3
pkgdesc="Decentralised, minimalist microblogging service for hackers"
url="https://github.com/buckket/twtxt"
arch="noarch"
license="MIT"
depends="py3-dateutil py3-aiohttp py3-click py3-humanize"
makedepends="py3-gpep517 py3-setuptools"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/t/twtxt/twtxt-$pkgver.tar.gz
	replace-pkg-resources.patch
	"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
13eb8824f565db1e91d922f81a97c1175f901d5f2c4eaba459af284a84022fbdece636d49141f3d8005534aa934a5507b4cb0d6f978f0ea24e00f29b33e4fce6  twtxt-1.3.1.tar.gz
a9ce613cc583ed2d8a4de1ca2a48c8ca54436986e62f9d501d13b6ed989498a60cf1f7753999972ff04c541d7c3d2aa962bd15dcd48b70f962c589be41a358a6  replace-pkg-resources.patch
"
