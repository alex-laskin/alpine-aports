maintainer="Michał Polański <michal@polanski.me>"
pkgname=mandown
pkgver=1.1.0
pkgrel=0
pkgdesc="Create man pages from markdown markup"
url="https://gitlab.com/kornelski/mandown"
license="Apache-2.0"
arch="all"
makedepends="cargo cargo-auditable"
source="$pkgname-$pkgver.tar.gz::https://gitlab.com/kornelski/mandown/-/archive/v$pkgver/mandown-v$pkgver.tar.gz"
builddir="$srcdir/$pkgname-v$pkgver"
options="net" # cargo fetch

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	cargo test --frozen
}

package() {
	install -Dm755 target/release/$pkgname -t "$pkgdir"/usr/bin/
}

sha512sums="
516a7b655c8aee8e171ba8e0a23997a6cfc9cbbc60197039acc10892ebdd6a454dfb3ca9dc4b7a49856edef0b1102f2126a0ad14ff203bcbb735603627125bbe  mandown-1.1.0.tar.gz
"
