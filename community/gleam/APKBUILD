# Contributor: rubicon <rubicon@mailo.com>
# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=gleam
pkgver=1.13.0
pkgrel=0
pkgdesc="Statically-typed language that compiles to Erlang and JS"
url="https://gleam.run/"
# s390x: tests stack overflow
arch="all !s390x"
license="Apache-2.0"
depends="erlang-dev"
makedepends="
	cargo
	cargo-auditable
	"
checkdepends="
	elixir
	git
	nodejs
	rebar3
	"
source="$pkgname-$pkgver.tar.gz::https://github.com/gleam-lang/gleam/archive/refs/tags/v$pkgver.tar.gz
	skip-bun-case.patch
	skip-deno-case.patch
	"

prepare() {
	default_prepare

	cargo fetch --target="$CTARGET" --locked
}

build() {
	cargo auditable build --frozen --release
}

check() {
	case "$CARCH" in
	arm*|x86)
		local test_args="--
			--skip dependency::tests::resolution_with_optional_deps_explicitly_provided
			--skip dependency::tests::resolution_with_optional_deps_incompatible
			--skip dependency::tests::resolution_with_optional_deps_required_by_nested_deps
			"
		;;
	esac

	cargo test --frozen $test_args
}

package() {
	install -Dvm755 target/release/gleam -t "$pkgdir"/usr/bin/
}

sha512sums="
