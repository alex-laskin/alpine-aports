pkgname=polybar
pkgver=3.7.2
pkgrel=3
pkgdesc="fast and easy-to-use tool for creating status bars"
url="https://polybar.github.io/"
arch="all"
license="MIT"
makedepends="
	alsa-lib-dev
	cairo-dev
	cmake
	curl-dev
	i3wm-dev
	jsoncpp-dev
	libmpdclient-dev
	libnl3-dev
	libuv-dev
	libxcb-dev
	samurai
	pulseaudio-dev
	python3
	py3-sphinx
	xcb-proto
	xcb-util-cursor-dev
	xcb-util-image-dev
	xcb-util-renderutil-dev
	xcb-util-wm-dev
	xcb-util-xrm-dev
	"
subpackages="
	$pkgname-doc
	$pkgname-bash-completion
	$pkgname-zsh-completion
	"
install="
	$pkgname.post-install
	"
_xppver="044e69d05db7f89339bda1ccd1efe0263b01c8f6"
_i3ipcppver="86ddf7102c6903ae0cc543071e2d375403fc0727"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/polybar/polybar/archive/$pkgver.tar.gz
	xpp-$_xppver.tar.gz::https://github.com/polybar/xpp/archive/$_xppver.tar.gz
	i3ipcpp-$_i3ipcppver.tar.gz::https://github.com/polybar/i3ipcpp/archive/$_i3ipcppver.tar.gz
	fix-version.patch
	fix-gcc-15-uint-errors.patch
	fix-modules-cmake-version.patch
	"
options="!check" # No test suite

prepare() {
	mkdir -p build
	rm -rf lib/xpp
	mv "$srcdir"/xpp-$_xppver lib/xpp
	rm -rf lib/i3ipcpp
	mv "$srcdir"/i3ipcpp-$_i3ipcppver lib/i3ipcpp
	default_prepare
}

build() {
	cd "$builddir"/build
	cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=None ..
	cmake --build .
}

package() {
	cd "$builddir"/build
	DESTDIR="$pkgdir" cmake --build . --target install
}

