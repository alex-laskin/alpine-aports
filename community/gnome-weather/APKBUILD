# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: team/gnome <pabloyoyoista@postmarketos.org>
pkgname=gnome-weather
pkgver=49.0
pkgrel=1
pkgdesc="GNOME Weather application"
url="https://apps.gnome.org/Weather"
# armhf blocked by gjs
arch="noarch !armhf"
license="GPL-2.0-only"
depends="
	geoclue
	gjs
	gobject-introspection
	gtk4.0
	libadwaita
	libgweather4
	"
makedepends="
	geoclue-dev
	gjs-dev
	glib-dev
	gobject-introspection-dev
	gtk4.0-dev
	libadwaita-dev
	libgweather4-dev
	meson
	typescript
	"
checkdepends="appstream-glib desktop-file-utils"
subpackages="$pkgname-lang"
source="https://download.gnome.org/sources/gnome-weather/${pkgver%.*}/gnome-weather-$pkgver.tar.xz"

build() {
	abuild-meson . output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
cecfe1fe02105606961e236e9dda93c7ef2938cebdcaae17f63e9e392e04b9a55e7363c16cbe8303a072fe61a1c11e4190c2f4fd0166e3ca6363836c78598ff0  gnome-weather-49.0.tar.xz
"
