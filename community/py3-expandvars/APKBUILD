# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-expandvars
pkgver=1.1.2
pkgrel=0
pkgdesc="Expand system variables Unix style"
url="https://pypi.org/project/expandvars/"
arch="noarch"
license="MIT"
makedepends="py3-gpep517 py3-hatchling"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/e/expandvars/expandvars-$pkgver.tar.gz"
builddir="$srcdir/expandvars-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
e04a9f5233a960f6e8bc2cedb922ed5f044768bfaf69b6eb7d8dc0d2013d22ae947b0f9c3d50fd83d04d5ebbd845f1b1f6e93bb6881a310a2e31eaf6b9e50fec  expandvars-1.1.2.tar.gz
"
