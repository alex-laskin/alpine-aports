# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=ksvg
pkgver=6.19.0
pkgrel=0
pkgdesc="Configuration system"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later AND LGPL-2.0-only AND LGPL-2.1-or-later"
depends_dev="
	karchive-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	qt6-qtdeclarative-dev
	qt6-qtsvg-dev
	kguiaddons-dev
	kirigami-dev
	"
makedepends="$depends_dev
	doxygen
	extra-cmake-modules
	graphviz
	qt6-qtdeclarative-private-dev
	qt6-qttools-dev
	kde-qdoc-common
	samurai
	"
checkdepends="xwayland-run"
subpackages="$pkgname-dev $pkgname-doc"
_repo_url="https://invent.kde.org/frameworks/ksvg.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/ksvg-$pkgver.tar.xz"

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

check() {
	wlheadless-run -- ctest --test-dir build -E 'ksvg(core-(ksvgtest|kdesktopfiletest|test_kconf_update)|gui-kstandardshortcutwatchertest)'
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}
sha512sums="
02390a9626e6445102c7544f032836428c7e7c9eac05e95bdca69256552a7340d7ed048d281e06ea9c91beafe72eab9f629c3a9d2ab4af4b64ea5f1b3ada9160  ksvg-6.19.0.tar.xz
"
