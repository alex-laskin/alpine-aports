pkgname=erofs-utils
pkgver=1.8.10
pkgrel=0
pkgdesc="userspace utilities for erofs filesystem"
url="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	autoconf
	automake
	libtool
	lz4-dev
	util-linux-dev
	zlib-dev
	"

subpackages="$pkgname-doc"
source="https://git.kernel.org/pub/scm/linux/kernel/git/xiang/erofs-utils.git/snapshot/erofs-utils-$pkgver.tar.gz"

prepare() {
	default_prepare
	autoreconf -fiv
}

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
8c7afd3db55fd4c4f7aa9fbd7ed40fa40de0bfffcee601a3f5dce823d406a32b5e939e24cd6dc336e3033e940fb16ee93f8821f627f90b10e6137113949933dd  erofs-utils-1.8.10.tar.gz
"
