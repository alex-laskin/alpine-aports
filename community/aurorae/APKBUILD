# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-plasma
maintainer="team/kde <achill@achill.org>"
pkgname=aurorae
pkgver=6.5.1
pkgrel=0
pkgdesc="Themeable window decoration for KWin"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://kde.org/plasma-desktop/"
license="GPL-2.0-or-later"
makedepends="
	cmake
	extra-cmake-modules
	kcmutils-dev
	kcolorscheme-dev
	kconfig-dev
	kcoreaddons-dev
	kdecoration-dev
	ki18n-dev
	knewstuff-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	samurai
	"
subpackages="$pkgname-lang"

case "$pkgver" in
	*.*.9*) _rel=unstable;;
	*) _rel=stable;;
esac

_repo_url="https://invent.kde.org/plasma/aurorae.git"
source="https://download.kde.org/$_rel/plasma/$pkgver/aurorae-$pkgver.tar.xz"
options="!check" # No tests

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
649e8f0d3d14fa8355ad16f84269a37972af524543107d1b4475401a907ff30f1393a85c2bfabce6a356f2366da956098201e6ae2bd2192346d63ebcb177422f  aurorae-6.5.1.tar.xz
"
