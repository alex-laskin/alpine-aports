# Contributor: Thomas Aldrian <aldrian.thom@proton.me>
# Maintainer: team/gnome <achill@achill.org>
pkgname=snapshot
pkgver=49.0
pkgrel=3
pkgdesc="Take pictures and videos"
url="https://gitlab.gnome.org/GNOME/snapshot"
# loongarch64: https://github.com/bytecodealliance/rustix/issues/1496
arch="all !loongarch64"
license="GPL-3.0-or-later"
makedepends="
	cargo
	cargo-auditable
	desktop-file-utils
	glib-dev
	gst-plugins-bad-dev
	gst-plugins-base-dev
	gstreamer-dev
	gtk4.0-dev
	lcms2-dev
	libadwaita-dev
	libseccomp-dev
	meson
	"
depends="
	glycin-loaders
	gst-plugin-pipewire
	gst-plugins-bad
	gst-plugins-good
	gst-plugins-rs-gtk4
	gst-plugins-ugly
	pipewire
	"
subpackages="$pkgname-lang"
source="https://download.gnome.org/sources/snapshot/${pkgver%%.*}/snapshot-$pkgver.tar.xz
	cargo-auditable.patch
	0001-aperture-Add-encoder-properties-map.patch
	0002-aperture-Rename-video-specific-variables.patch
	0003-aperture-Add-image-encoder-properties-map.patch
	"

build() {
	abuild-meson \
		. output
	meson compile -C output
}

check() {
	cargo test
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

