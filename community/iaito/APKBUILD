# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=iaito
pkgver=6.0.4
pkgrel=1
pkgdesc="Official QT frontend of radare2"
url="https://www.radare.org/n/iaito.html"
license="GPL-3.0-only"
arch="all"
depends="radare2
	graphviz
	qt6-qtsvg
	"
makedepends="radare2-dev
	bash
	qt6-qtsvg-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver-1.tar.gz::https://github.com/radareorg/iaito/archive/refs/tags/$pkgver.tar.gz"
options="!check" # no testsuite

build() {
	./configure \
		--with-qmake6 \
		--build=$CBUILD \
		--target=$CTARGET \
		--prefix=/usr \
		--sysconfdir=/etc
	make
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
09528a86ae6315b19ee2d3ffa6fa9c99dbe10c6436397e2553d7124703b592a4cfd927e742f035db02763b90feec3732d56d159d5559cdc6e2bdf5ad217b40d9  iaito-6.0.4-1.tar.gz
"
