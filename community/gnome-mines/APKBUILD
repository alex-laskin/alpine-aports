# Contributor: Erwan Rouchet <lucidiot@brainshit.fr>
# Maintainer: Erwan Rouchet <lucidiot@brainshit.fr>
pkgname=gnome-mines
pkgver=49.0.1
pkgrel=0
arch="all"
url="https://gitlab.gnome.org/GNOME/gnome-mines"
pkgdesc="Clear hidden mines from a minefield"
license="GPL-3.0-or-later"
depends="librsvg"
makedepends="
	appstream-glib
	desktop-file-utils
	gtk4.0-dev
	itstool
	libadwaita-dev
	libgee-dev
	libgnome-games-support-dev
	librsvg-dev
	meson
	vala
	yelp-tools
	"
source="https://download.gnome.org/sources/gnome-mines/${pkgver%%.*}/gnome-mines-$pkgver.tar.xz"
subpackages="$pkgname-doc $pkgname-lang"

build() {
	abuild-meson . build
	meson compile -C build
}

check() {
	meson test -C build --print-errorlogs
}

package() {
	DESTDIR="$pkgdir" meson install -C build
}

sha512sums="
cfeecfb0a41197721ae6850e9cca9774ff2000f49ee9256eaf0f13089eb2f6eb42c5e581e149804b0f19f88ac44c070df2f3963828031e2ac8b891ed8df4194e  gnome-mines-49.0.1.tar.xz
"
