maintainer="Achill Gilgenast <achill@achill.org>"

# when changing _ver we *must* bump _rel
_name=zfs
_ver=2.3.4
_rel=0
# when changing _kver make sure _krel=0 & _rel=0
_flavor=${FLAVOR:-stable}
_kpkg=linux-$_flavor
_kver=6.17.4
_krel=1

_kpkgver="$_kver-r$_krel"

_extra_flavors=

_kpkg=linux-$_flavor
_kabi="$_kver-$_krel-$_flavor"

pkgname=$_name-$_flavor
pkgver=$_kver
pkgrel=$(( _krel + _rel ))

pkgdesc="ZFS Linux kernel modules"
url="https://openzfs.org"
arch="all !armhf" # limited by linux-stable
license="CDDL-1.0"
depends="$_kpkg=$_kpkgver"
depends_dev="glib-dev e2fsprogs-dev util-linux-dev libtirpc-dev
	$_kpkg-dev=$_kpkgver"

makedepends="$depends_dev linux-headers autoconf automake libtool"
install_if="zfs $_kpkg=$_kpkgver"
subpackages="$pkgname-dev"
source="https://github.com/openzfs/zfs/releases/download/zfs-$_ver/zfs-$_ver.tar.gz
	zfs-$_ver-kernel-dentry-operations.m4::https://raw.githubusercontent.com/openzfs/zfs/zfs-$_ver/config/kernel-dentry-operations.m4
	linux6.17.patch
	"
builddir="$srcdir/$_name-$_ver"
options="!check"

for f in $_extra_flavors; do
	makedepends="$makedepends linux-$f-dev=$_kpkgver"
	subpackages="$subpackages zfs-$f:_extra"
done

prepare() {
	# not shipped in the tarballs
	cp "$srcdir"/zfs-$_ver-kernel-dentry-operations.m4 "$builddir"/config/kernel-dentry-operations.m4

	default_prepare

	# verify the kernel version
	local _kapkbuild="$startdir"/../../community/linux-$_flavor/APKBUILD
	if [ -f $_kapkbuild ]; then
		(	. $_kapkbuild
			pkgname=$_name-$_flavor
			[ "$_kver" != "$pkgver" ] && die "please update _kver to $pkgver"
			[ "$_krel" != "$pkgrel" ] && die "please update _krel to $pkgrel"
			return 0
		)
	fi

	# for linux6.17.patch
	autoreconf -vfi
}

build() {
	local flavor= kabi=
	for flavor in $_flavor $_extra_flavors; do
		kabi="$_kver-$_krel-$flavor"
		cp -a -l "$builddir" "$srcdir"/$kabi
		cd "$srcdir"/$kabi
		./configure --prefix=/usr \
			--with-tirpc \
			--sysconfdir=/etc \
			--mandir=/usr/share/man \
			--infodir=/usr/share/info \
			--localstatedir=/var \
			--with-config=kernel \
			--with-linux=/usr/src/linux-headers-$kabi

		make
	done
}

package() {
	local flavor= kabi=
	for flavor in $_flavor $_extra_flavors; do
		kabi="$_kver-$_krel-$flavor"
		make -C "$srcdir"/$kabi DESTDIR="$pkgdir" install
	done
}

_extra() {
	local flavor=${subpkgname##*-}
	depends="linux-$flavor=$_kpkgver"
	install_if="zfs linux-$flavor=$_kpkgver"
	pkgdesc="ZFS Linux kernel modules for $flavor"

	kabi="$_kver-$_krel-$flavor"
	mkdir -p "$subpkgdir"/lib/modules
	mv "$pkgdir"/lib/modules/$kabi "$subpkgdir"/lib/modules
}

dev() {
	mkdir -p "$subpkgdir"/usr
	mv "$pkgdir"/usr/src "$subpkgdir"/usr
	default_dev
}

sha512sums="
