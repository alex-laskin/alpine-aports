pkgname=bvi
pkgver=1.5.0
pkgrel=0
pkgdesc="Display-oriented editor for binary files based on vi"
url="https://bvi.sourceforge.net/"
arch="all"
license="GPL-3.0-or-later"
makedepends="ncurses-dev"
subpackages="$pkgname-doc"
source="https://downloads.sourceforge.net/sourceforge/bvi/bvi-$pkgver.src.tar.gz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--datadir=/usr/share/doc
	make
}

package() {
	make DESTDIR="$pkgdir" install

	mkdir -p "$pkgdir"/usr/share/doc/$pkgname/
	install -Dm644 CHANGES README CREDITS \
		"$pkgdir"/usr/share/doc/$pkgname/
}

sha512sums="
c1b0cff014a1e683cf4c08485e8b7b1c4be3585079a904100adff40c9ecac7e7fb0394e2ee0b4e0c2fa5a56f59a9b1960887e23c72d3c7f7e4b25cd8c30b6114  bvi-1.5.0.src.tar.gz
"
