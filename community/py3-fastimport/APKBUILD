# Contributor: Pedro Filipe <xpecex@outlook.com>
# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-fastimport
pkgver=0.9.16
pkgrel=0
pkgdesc="VCS fastimport/fastexport parser"
url="https://github.com/jelmer/python-fastimport"
arch="noarch"
license="GPL-2.0-or-later"
makedepends="
	git
	py3-gpep517
	py3-setuptools
	"
subpackages="$pkgname-pyc"
source="https://github.com/jelmer/python-fastimport/archive/refs/tags/v$pkgver/python-fastimport-$pkgver.tar.gz"
builddir="$srcdir/python-fastimport-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m unittest fastimport.tests.test_suite
}

package() {
	python3 -m installer -d "$pkgdir" .dist/*.whl
}

sha512sums="
633c7e53a81ff3556b29172c1673d409ff39b06fddd27eb4b7025042d7e9c8b47b9800decb3b0c121f6d9f217382ca1b21d17e2cbc51c0bced890f4c9bd98090  python-fastimport-0.9.16.tar.gz
"
