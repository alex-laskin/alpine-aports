# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
maintainer="Will Sinatra <wpsinatra@gmail.com>"
pkgname=py3-zope-exceptions
_pyname=zope.exceptions
pkgver=6.0
pkgrel=0
pkgdesc="Zope Exceptions"
# Cyclic dep zope.testrunner needs zope.exceptions to run, but zope.exceptions
# needs zope.testrunner on its test dependencies
options="!check"
url="https://github.com/zopefoundation/zope.exceptions"
arch="noarch"
license="ZPL-2.1"
depends="py3-zope-interface py3-setuptools"
makedepends="py3-gpep517 py3-wheel"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/zopefoundation/zope.exceptions/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/$_pyname-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
2edd8279734965ec3478467e54a9726b5f277b307f01b26d937520cc47f8bcdbcf017283625d68984bfc0b5a91831138ef5c83b34182ced4ab1917be2d091e93  py3-zope-exceptions-6.0.tar.gz
"
