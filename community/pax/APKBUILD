# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=pax
pkgver=20240817
pkgrel=0
pkgdesc="Portable Archive eXchange"
url="https://mbsd.evolvis.org/pax.htm"
arch="all"
license="BSD-3-Clause"
makedepends="musl-fts-dev"
subpackages="$pkgname-doc"
source="https://mbsd.evolvis.org/MirOS/dist/mir/cpio/paxmirabilis-$pkgver.tgz"
builddir="$srcdir/$pkgname"
options="!check" # no tests provided

build() {
	export LIBS="-lfts"

	sh ./Build.sh -r -tpax
}

package() {
	install -Dvm755 pax -t "$pkgdir"/usr/bin/
	ln -sv pax "$pkgdir"/usr/bin/paxcpio
	ln -sv pax "$pkgdir"/usr/bin/paxtar

	install -Dvm644 mans/*.1 -t "$pkgdir"/usr/share/man/man1/
}

sha512sums="
