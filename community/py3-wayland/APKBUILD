# Contributor: Clayton Craft <clayton@craftyguy.net>
# Maintainer: Clayton Craft <clayton@craftyguy.net>
pkgname=py3-wayland
pkgver=0.4.18
pkgrel=0
pkgdesc="Wrapper to the libwayland library"
url="https://github.com/flacjacket/pywayland"
arch="all"
license="Apache-2.0"
depends="
	py3-cffi
	python3
	wayland-libs-client
	wayland-libs-server
	wayland-protocols
"
makedepends="
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	wayland-dev
"
checkdepends="py3-pytest xwayland-run"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/flacjacket/pywayland/archive/v$pkgver/pywayland-$pkgver.tar.gz"
builddir="$srcdir/pywayland-$pkgver"

build() {
	python3 ./pywayland/ffi_build.py
	python3 -m pywayland.scanner
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
 	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl

	# disabled test seems to be broken:
	# https://github.com/flacjacket/pywayland/issues/26
	xwfb-run -- .testenv/bin/python3 -m pytest \
		--deselect test/test_registry_bind.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
cf46e3fed04a30eff4bb8293857fc9e874394bbd214b94cc2f73424e3c64d1c4a5df125189163e57d2b17017feb1e919588291e06c84acdc2e4479315b400932  py3-wayland-0.4.18.tar.gz
"
