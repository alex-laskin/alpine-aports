# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=himitsu
pkgver=0.9
pkgrel=0
pkgdesc="A secret storage manager"
url="https://himitsustore.org"
arch="x86_64 aarch64 riscv64" # Hare
license="GPL-3.0-only"
install="$pkgname.post-upgrade"
makedepends="hare scdoc"
subpackages="$pkgname-doc $pkgname-dev"
source="$pkgname-$pkgver.tar.gz::https://git.sr.ht/~sircmpwn/himitsu/archive/$pkgver.tar.gz"

export HARECACHE="${HARECACHE:-"$srcdir/hare-cache"}"

build() {
	make -j1 PREFIX=/usr
}

check() {
	make PREFIX=/usr check
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr install
}

dev() {
	amove usr/src
}

sha512sums="
7082a13630a9cc2fe042686bfba8616b19f75d8d7f89f6e1a6ebdc950cdc7407b3fece533786214d50187f91b5b3aa2309941bffd6956d46228b8e658cab969d  himitsu-0.9.tar.gz
"
