# Contributor: Aiden Grossman <agrossman154@yahoo.com>
maintainer="Achill Gilgenast <achill@achill.org>"
pkgname=py3-jupyterlab_pygments
pkgver=0.3.0
pkgrel=1
pkgdesc="Pygments theme using JupyterLab CSS variables"
url="https://github.com/jupyterlab/jupyterlab_pygments"
arch="noarch !armhf !armv7 !x86 !loongarch64 !riscv64 !s390x !ppc64le" # blocked by jupyterlab
license="BSD-3-Clause"
makedepends="
	jupyterlab
	nodejs
	py3-gpep517
	py3-hatch-jupyter-builder
	py3-hatchling
	py3-hatch-nodejs-version
	py3-jupyterlab_server
	py3-setuptools
	"
options="!check" # no test suite
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/jupyterlab/jupyterlab_pygments/archive/refs/tags/$pkgver.tar.gz"
builddir="$srcdir/jupyterlab_pygments-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
30be530fe94dc76f27f8cb79f37c9bad39d66637a0c370b80c9a3c6bbc6563c5adcc58bceb9dd96408bdddbde7f75aff4f44e24ff73aafc644c1ded3b2cd3087  py3-jupyterlab_pygments-0.3.0.tar.gz
"
