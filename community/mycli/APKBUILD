# Contributor: Thomas Boerger <thomas@webhippie.de>
# Maintainer: omni <omni+alpine@hack.org>
maintainer="omni <omni+alpine@hack.org>"
pkgname=mycli
pkgver=1.40.0
pkgrel=1
pkgdesc="MySQL CLI with autocompletion and syntax highlighting"
url="https://www.mycli.net/"
arch="noarch"
license="BSD-3-Clause"
depends="
	python3
	py3-cli_helpers
	py3-click
	py3-configobj
	py3-cryptography
	py3-prompt_toolkit
	py3-pycryptodomex
	py3-pyfzf
	py3-pygments
	py3-pymysql
	py3-pyperclip
	py3-sqlglot
	py3-sqlparse
	"
makedepends="python3-dev
	py3-gpep517
	py3-paramiko
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	"
checkdepends="py3-pytest py3-mock"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/m/mycli/mycli-$pkgver.tar.gz
	llm_opt-out.patch
	"

prepare() {
	default_prepare

	# together with llm_opt-out.patch
	rm "$builddir"/mycli/packages/special/llm.py
}

build() {
	SETUPTOOLS_SCM_PRETEND_VERSION="$pkgver" \
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	# click 8.1 output differs
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest -v test \
		--ignore test/test_llm_special.py
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
	rm -rf "$pkgdir"/usr/lib/python3*/site-packages/test/
}

sha512sums="
c5a9e1f974699140f7d17cf641b59f55e782d9fc82a2018d20db4310d71576dfc30ed70ae149af8b8db23d2ebeb97cbe44e7f37e1375d7f13d8696e4e8c1aba5  mycli-1.40.0.tar.gz
42be681b70fc7c5f58379ac8ac433e6f14764d3c753ba4a1210d3d6ef78d73dea738f440aed245fbd6b2e221019361bc4471b1529869a41e9223e6c96f4ce63c  llm_opt-out.patch
"
