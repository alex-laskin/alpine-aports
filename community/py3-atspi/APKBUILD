# Contributor: Rasmus Thomsen <oss@cogitri.dev>
# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=py3-atspi
pkgver=2.58.0
pkgrel=0
pkgdesc="Python client bindings for D-Bus AT-SPI"
url="https://gitlab.gnome.org/GNOME/pyatspi2"
arch="noarch"
license="GPL-2.0-or-later"
depends="
	py3-gobject3
	python3
	"
makedepends="
	meson
	py3-gobject3-dev
	python3-dev
	"
subpackages="$pkgname-pyc"
source="https://download.gnome.org/sources/pyatspi/${pkgver%.*}/pyatspi-$pkgver.tar.xz"
builddir="$srcdir/pyatspi-$pkgver"

build() {
	abuild-meson \
		output .
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}
sha512sums="
86133cee35808eaaa5196825a62eaaada4860704ba6b47f03831593f3aec6570a53aeb0caca6e14c264256eb3793f4036bdc2932f9d3c306d66cee3446756376  pyatspi-2.58.0.tar.xz
"
