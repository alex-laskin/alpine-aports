maintainer="team/gnome <kboykinov@teamcentrixx.com>"
pkgname=libpanel
pkgver=1.10.2
pkgrel=0
# NOTE: Upgrade only to even-numbered versions (e.g. 1.18.x, 1.20.x)!
pkgdesc="Dock/panel library for GTK 4"
url="https://gitlab.gnome.org/GNOME/libpanel"
arch="all"
license="LGPL-2.1-or-later"
makedepends="
	gobject-introspection-dev
	gtk4.0-dev
	libadwaita-dev
	meson
	vala
	"
subpackages="$pkgname-dev $pkgname-lang"
source="https://gitlab.gnome.org/GNOME/libpanel/-/archive/$pkgver/libpanel-$pkgver.tar.gz"

build() {
	abuild-meson \
		-Db_lto=true \
		-Ddocs=disabled \
		. output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
73f1c5e24b9186e0963f376dafa8f2f9cfaad4786211585ce932ffe3e10feff9b8d883ed5746065077a5eacf593d501a3c6c0844a62081a6099d832ab8ed62b7  libpanel-1.10.2.tar.gz
"
