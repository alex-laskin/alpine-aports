# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=py3-cffsubr
pkgver=0.3.0
pkgrel=0
pkgdesc="Standalone CFF subroutinizer based on AFDKO tx"
url="https://github.com/adobe-type-tools/cffsubr"
arch="all"
license="Apache-2.0"
depends="py3-fonttools"
makedepends="
	cmake
	libxml2-dev
	py3-gpep517
	py3-scikit-build
	py3-setuptools
	py3-setuptools_scm
	py3-wheel
	samurai
	util-linux-dev
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/c/cffsubr/cffsubr-$pkgver.tar.gz
	deps-cmake.patch
	"
builddir="$srcdir/cffsubr-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
5cc957673c9d6d54aa83eee870b9f2b1e9c2efe44a9f2de47b95ca98a4bd753d98cb7ccf08aa1c59e6be246e8821347b9e4eb6e627074c23753daa97df9c3339  cffsubr-0.3.0.tar.gz
0c659be8c2f023857447ee8eae1d2ef453249fa59b32ebcd49e2dfd0085e70a4a65579e9c8693da6c29cbb719d20c26c15ebc40dcec9c9161b9ab876978f4ded  deps-cmake.patch
"
