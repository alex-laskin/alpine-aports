maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=picard
pkgver=2.13.3_git20251006
_commit=9805cfeffbca998ac53e7e3e77e85597a703a5f4
pkgrel=0
# armhf blocked by qt6-qtdeclarative -> py3-qt6
arch="all !armhf"
url="https://picard.musicbrainz.org/"
pkgdesc="Official MusicBrainz tagger"
license="GPL-2.0-or-later"
depends="
	chromaprint
	py3-dateutil
	py3-fasteners
	py3-mutagen
	py3-qt6
	py3-yaml
	qt6-qtimageformats
	"
makedepends="
	gettext
	py3-gpep517
	py3-setuptools
	py3-wheel
	python3-dev
	"
checkdepends="py3-pytest"
subpackages="$pkgname-lang $pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/metabrainz/picard/archive/$_commit.tar.gz"
builddir="$srcdir/picard-$_commit"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

lang() {
	amove usr/lib/python3.12/site-packages/picard/locale/
}

sha512sums="
4c26efafb75bf40a2047ccc37373c1d0e3f1f8034ef6f2da703d9a016a834b1c8b91c2ae642e376b34032507c980f7454e2ef43ba8844974a7fbc94a7872fca1  picard-2.13.3_git20251006.tar.gz
"
