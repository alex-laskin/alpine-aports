maintainer="Michał Polański <michal@polanski.me>"
pkgname=py3-scrypt
pkgver=0.8.29
pkgrel=0
pkgdesc="Python bindings for the scrypt key derivation function"
url="https://github.com/holgern/py-scrypt"
license="BSD-2-Clause"
arch="all"
makedepends="python3-dev openssl-dev py3-gpep517 py3-installer py3-setuptools py3-wheel"
subpackages="$pkgname-pyc"
source="https://github.com/holgern/py-scrypt/archive/v$pkgver/py3-scrypt-$pkgver.tar.gz"
builddir="$srcdir/py-scrypt-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m unittest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/scrypt-*.whl

	# do not install the tests module
	rm -r "$pkgdir"/usr/lib/python*/site-packages/scrypt/tests
}

sha512sums="
a985e31289011d56486d89b2b16a93a4e26d9be2316e9f84909b695b8f497664eee678aaaf830ad0912eb0372549fdacee30e707e77a80db4321d5632359806b  py3-scrypt-0.8.29.tar.gz
"
