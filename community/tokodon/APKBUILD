# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-applications
maintainer="team/kde <bribbers@disroot.org>"
pkgname=tokodon
pkgver=25.08.1
pkgrel=0
pkgdesc="A Mastodon client for Plasma and Plasma Mobile"
url="https://invent.kde.org/network/tokodon/"
# armhf blocked by qt6-qtdeclarative -> kirigami
# x86, riscv64, ppc64le and s390x blocked by qt6-qtwebengine -> qt6-qtwebview
arch="all !armhf !x86 !riscv64 !ppc64le !s390x"
license="GPL-3.0-only AND CC0-1.0"
depends="
	kdeclarative
	kirigami
	kirigami-addons
	purpose
	qqc2-desktop-style
	"
makedepends="
	extra-cmake-modules
	kconfig-dev
	kcoreaddons-dev
	kdbusaddons-dev
	ki18n-dev
	kio-dev
	kirigami-addons-dev
	kirigami-dev
	knotifications-dev
	kunifiedpush-dev
	mpvqt-dev
	purpose-dev
	qqc2-desktop-style-dev
	qcoro-dev
	qt6-qtbase-dev
	qt6-qtdeclarative-private-dev
	qt6-qtmultimedia-dev
	qt6-qtsvg-dev
	qt6-qtwebsockets-dev
	qt6-qtwebview-dev
	qtkeychain-dev
	samurai
	"
subpackages="$pkgname-lang"
_repo_url="https://invent.kde.org/network/tokodon.git"
source="https://download.kde.org/stable/release-service/$pkgver/src/tokodon-$pkgver.tar.xz"
# No tests
options="!check"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
fa2a1d3527ab16a6e05deacb8219d725bf64122ba6c27fc365b6ab6a6d6787806c56fd5cf814a645f8b2a5a75f9acae2e893628f3876965096be3139d44e08c4  tokodon-25.08.1.tar.xz
"
