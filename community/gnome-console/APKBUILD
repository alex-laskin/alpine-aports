# Contributor: David Heidelberg <david@ixit.cz>
maintainer="team/gnome <david@ixit.cz>"
pkgname=gnome-console
pkgver=49.1
pkgrel=0
pkgdesc="User-friendly terminal for GNOME"
url="https://gitlab.gnome.org/GNOME/console"
arch="all"
license="GPL-3.0-only"
depends="
	dbus
	gsettings-desktop-schemas
	"
makedepends="
	desktop-file-utils
	glib-dev
	gsettings-desktop-schemas-dev
	gtk4.0-dev
	libadwaita-dev
	libgtop-dev
	meson
	pcre2-dev
	sassc
	vte3-dev
	"
checkdepends="xwayland-run"
subpackages="$pkgname-lang"
source="https://download.gnome.org/sources/gnome-console/${pkgver%%.*}/gnome-console-$pkgver.tar.xz
	bin-test.patch
	"
replaces="kgx"
provides="kgx=$pkgver-r$pkgrel"
options="!check" # locale stuff

build() {
	abuild-meson \
		-Db_lto=true \
		-Dtests="$(want_check && echo true || echo false)" \
		. output
	meson compile -C output
}

check() {
	wlheadless-run -- \
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

sha512sums="
