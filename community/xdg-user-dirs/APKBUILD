maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=xdg-user-dirs
pkgver=0.19
pkgrel=0
arch="all"
url="https://www.freedesktop.org/wiki/Software/xdg-user-dirs"
pkgdesc="Manage user directories like ~/Desktop and ~/Music"
license="MIT AND GPL-2.0-only"
makedepends="
	docbook-xsl
	gettext
	meson
	musl-libintl
	"
subpackages="$pkgname-lang $pkgname-doc"
source="https://user-dirs.freedesktop.org/releases/xdg-user-dirs-$pkgver.tar.xz
	man-use-local-docbook-xsl.patch
	"
options="!check" # No tests

build() {
	abuild-meson \
		-Db_lto=true \
		. output
	meson compile -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

