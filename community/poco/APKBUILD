# Contributor: Leonardo Arena <rnalrd@alpinelinux.org>
# Maintainer: Bart Ribbers <bribbers@disroot.org>
pkgname=poco
pkgver=1.14.2
pkgrel=0
pkgdesc="C++ class libraries for building network- and internet-based applications"
url="https://pocoproject.org/"
arch="all"
license="BSL-1.0"
depends_dev="
	expat-dev
	libpq-dev
	mariadb-connector-c-dev
	openssl-dev
	pcre2-dev
	sqlite-dev
	unixodbc-dev
	zlib-dev
	"
makedepends="$depends_dev
	chrpath
	cmake
	linux-headers
	samurai
	utf8proc-dev
	"
source="https://pocoproject.org/releases/poco-$pkgver/poco-$pkgver-all.tar.gz"
subpackages="$pkgname-dev"
options="!check" # No testsuite

builddir="$srcdir/$pkgname-$pkgver-all"

build() {
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DPOCO_UNBUNDLED=ON
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
a369445b38005cc54b1e2dc72bd7d418cfc6dfcfc29c1881a10ecc3b472d7f5e5a2f658940919da45c883662320a464797a9af6eb4e1b0688fc673efae360433  poco-1.14.2-all.tar.gz
"
