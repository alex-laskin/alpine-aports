From: LN Liberda <lauren@selfisekai.rocks>
Date: Thu, 21 Aug 2025 01:43:35 +0200
Subject: [PATCH] Zig 0.15: Update Zig version

---
 src/main.zig | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/main.zig b/src/main.zig
index 39ea01d..7233abc 100644
--- a/src/main.zig
+++ b/src/main.zig
@@ -12,8 +12,8 @@ const utildbg = @import("./util/utildbg.zig");
 pub fn main() !void {
     comptime {
         const v = builtin.zig_version;
-        if (v.major != 0 or v.minor != 14)
-            @panic("Must be built against Zig 0.14.x");
+        if (v.major != 0 or v.minor != 15)
+            @panic("Must be built against Zig 0.15.x");
     }
 
     const allocator = std.heap.c_allocator;
