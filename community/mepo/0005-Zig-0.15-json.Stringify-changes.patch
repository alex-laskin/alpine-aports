From 39f030bf5d3490b2197a1c7422798ec55d3491e0 Mon Sep 17 00:00:00 2001
From: LN Liberda <lauren@selfisekai.rocks>
Date: Thu, 21 Aug 2025 02:49:10 +0200
Subject: [PATCH] Zig 0.15: json.Stringify changes

---
 src/Mepo.zig         | 2 +-
 src/api/filedump.zig | 2 +-
 2 files changed, 2 insertions(+), 2 deletions(-)

diff --git a/src/Mepo.zig b/src/Mepo.zig
index 258674d..e9124b9 100644
--- a/src/Mepo.zig
+++ b/src/Mepo.zig
@@ -361,7 +361,7 @@ fn jsonapi_execute_parseargs(
                 },
                 .array => |g| {
                     if (spec_arg.tag != .Exps) return error.InvalidArgTypeGotExps;
-                    const str = try std.json.stringifyAlloc(allocator, g.items, .{});
+                    const str = try std.json.Stringify.valueAlloc(allocator, g.items, .{});
                     args[i] = .{ .Exps = str };
                 },
                 else => return error.InvalidArgsTypeGotUnknown,
diff --git a/src/api/filedump.zig b/src/api/filedump.zig
index fe60764..36c5a74 100644
--- a/src/api/filedump.zig
+++ b/src/api/filedump.zig
@@ -113,7 +113,7 @@ pub fn filedump(mepo: *Mepo, save_types: []const u8, filepath: []const u8) !void
         try statements.append(.{ .cmd = "pin_groupactivate", .args = try std.json.ArrayHashMap(std.json.Value).jsonParseFromValue(arena.allocator(), .{ .object = args_pingroupactivate }, .{}) });
     }
 
-    const str = try std.json.stringifyAlloc(arena.allocator(), statements.items, .{
+    const str = try std.json.Stringify.valueAlloc(arena.allocator(), statements.items, .{
         .whitespace = .indent_2,
     });
     try jsonapi_file.writeAll(str);
