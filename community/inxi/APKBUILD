# Contributor: Dennis Krupenik <dennis@krupenik.com>
# Maintainer: Dennis Krupenik <dennis@krupenik.com>
pkgname=inxi
_pkgver=3.3.39-1
pkgver=${_pkgver/-/.}
pkgrel=0
pkgdesc="Fully featured CLI system information tool"
url="https://smxi.org/"
arch="noarch"
license="GPL-3.0-or-later"
depends="perl"
subpackages="$pkgname-doc"
source="$pkgname-$_pkgver.tar.gz::https://codeberg.org/smxi/inxi/archive/$_pkgver.tar.gz"
builddir="$srcdir/$pkgname"

check() {
	# no upstream tests
	./inxi --version
}

package() {
	install -Dm0755 inxi -t "$pkgdir"/usr/bin
	install -Dm0644 inxi.1 -t "$pkgdir"/usr/share/man/man1
}

sha512sums="
39df5aa096421d2e0e6b006e6f6c39c0321d188a842d3d12c0b178d675dac5a88fc31b7801e3660fed2e21e950327d7d091099e1219c81dbcaf3a718b4863fea  inxi-3.3.39-1.tar.gz
"
