# Maintainer: Haelwenn (lanodan) Monnier <contact+alpine@hacktivis.me>
pkgname=py3-pytest-recording
pkgver=0.13.4
pkgrel=0
pkgdesc="pytest plugin to record network interactions via VCR.py"
url="https://github.com/kiwicom/pytest-recording/"
arch="noarch"
license="MIT"
depends="python3 py3-vcrpy"
makedepends="py3-gpep517 py3-hatchling"
checkdepends="py3-pytest py3-requests py3-pytest-httpbin py3-pytest-mock"
subpackages="$pkgname-pyc"
source="$pkgname-$pkgver.tar.gz::https://github.com/kiwicom/pytest-recording/archive/refs/tags/v$pkgver.tar.gz"
builddir="$srcdir/pytest-recording-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	gpep517 install-wheel --destdir .testenv --prefix '' .dist/*.whl

	# test_block_network_with_allowed_hosts: Internet
	# https://github.com/kiwicom/pytest-recording/issues/131
	.testenv/bin/python3 -m pytest \
		--deselect=tests/test_blocking_network.py::test_block_network_with_allowed_hosts
}

package() {
	gpep517 install-wheel --destdir "$pkgdir" \
		.dist/*.whl
}

sha512sums="
73a7dbce393ba721f8a8595a6e4a89e94510b2027f2758ea629af1c44df98af2747a643f9b1e04e6950b8ec8fbd1098c92f5201eff2f82aa80d0b139e94d33a5  py3-pytest-recording-0.13.4.tar.gz
"
