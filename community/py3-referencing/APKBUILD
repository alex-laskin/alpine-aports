# Maintainer: Patrycja Rosa <alpine@ptrcnull.me>
pkgname=py3-referencing
pkgver=0.37.0
pkgrel=0
pkgdesc="Cross-specification JSON referencing"
url="https://github.com/python-jsonschema/referencing"
arch="noarch"
license="MIT"
# py3-typing-extensions can be removed with py 3.13
depends="
	py3-attrs
	py3-rpds-py
	py3-typing-extensions
	"
makedepends="
	py3-gpep517
	py3-hatch-vcs
	py3-hatchling
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/python-jsonschema/referencing/releases/download/v$pkgver/referencing-$pkgver.tar.gz"
builddir="$srcdir/referencing-$pkgver"
options="!check" # circular with jsonschema

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
8882ac50849e66da6829772bb6140fbd4c853c7fd7410bedd61b29afe071d3c631382f624f203b446887a86cb0885fbdb946092c2d2ecc1907433fd2ef7cb426  referencing-0.37.0.tar.gz
"
