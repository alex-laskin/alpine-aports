# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=waylock
pkgver=1.5.0
pkgrel=0
pkgdesc="A small screenlocker for Wayland compositors"
url="https://codeberg.org/ifreund/waylock"
arch="aarch64 x86_64"  # blocked by zig
license="ISC"
makedepends="
	libxkbcommon-dev
	linux-pam-dev
	scdoc
	wayland-dev
	wayland-protocols
	zig
	"
# net: downloads dependencies defined in build.zig.zon
# !check: no tests
options="net !check"
subpackages="$pkgname-doc"
source="https://codeberg.org/ifreund/waylock/releases/download/v$pkgver/waylock-$pkgver.tar.gz
	pam-base-auth.patch
	"

build() {
	DESTDIR='.dest' zig build \
		--prefix /usr \
		-Doptimize=ReleaseSafe \
		-Dcpu=baseline \
		-Dpie=true \
		-Dman-pages=true \
		--prefix /usr install
}

package() {
	mkdir -p "$pkgdir"
	cp -r .dest/* "$pkgdir"/
}

sha512sums="
