# Contributor: Alan Lacerda <alacerda@alpinelinux.org>
# Maintainer: Alan Lacerda <alacerda@alpinelinux.org>
pkgname=mate-utils
pkgver=1.28.0
pkgrel=1
pkgdesc="Utilities for the MATE Desktop"
url="https://github.com/mate-desktop/mate-utils"
arch="all"
license="GPL-2.0-or-later"
depends="mate-dictionary"
makedepends="
	glib-dev
	gtk+3.0-dev
	inkscape
	intltool
	itstool
	libcanberra-dev
	libgtop-dev
	libsm-dev
	libxml2-utils
	mate-desktop-dev
	mate-panel-dev
	udisks2-dev
	"
subpackages="$pkgname-dev $pkgname-doc $pkgname-lang mate-dictionary:dictionary"
source="https://pub.mate-desktop.org/releases/${pkgver%.*}/mate-utils-$pkgver.tar.xz"

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--sysconfdir=/etc \
		--enable-static=no \
		--prefix=/usr
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

dictionary() {
	depends=""
	pkgdesc="Dictionary from the MATE Desktop"

	amove usr/bin/mate-dictionary \
		usr/lib/libmatedict.so.* \
		usr/share/applications/mate-dictionary.desktop \
		usr/share/glib-2.0/schemas/org.mate.dictionary.gschema.xml \
		usr/share/mate-dict/ \
		usr/share/mate-dictionary/mate-dictionary-preferences.ui \
		usr/share/mate-dictionary/mate-dictionary-source.ui \
		usr/share/mate-dictionary/mate-dictionary-ui.xml \
		usr/share/metainfo/mate-dictionary.appdata.xml
}

sha512sums="
bf64e0458bc60ebcda219201bb552239503cfddf576ebfba957d4d73ed69766d003fa7af8df9a271a795c6eb2db268a58a97b4251f9528d261edb98a4e94c72a  mate-utils-1.28.0.tar.xz
"
