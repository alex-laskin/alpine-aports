# Contributor: prspkt <prspkt@protonmail.com>
# Maintainer: prspkt <prspkt@protonmail.com>
pkgname=py3-zipp
pkgver=3.23.0
pkgrel=0
pkgdesc="Pathlib-compatible object wrapper for zip files"
url="https://github.com/jaraco/zipp"
arch="noarch"
license="MIT"
depends="python3"
makedepends="py3-gpep517 py3-setuptools py3-setuptools_scm py3-wheel"
checkdepends="
	py3-func-timeout
	py3-jaraco.functools
	py3-jaraco.itertools
	py3-jaraco.test
	py3-pytest
	"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/z/zipp/zipp-$pkgver.tar.gz"
builddir="$srcdir/zipp-$pkgver"

replaces="py-zipp" # Backwards compatibility
provides="py-zipp=$pkgver-r$pkgrel" # Backwards compatibility

# secfixes:
#   3.23.0-r0:
#     - CVE-2024-5569

build() {
	export SETUPTOOLS_SCM_PRETEND_VERSION=$pkgver
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/zipp*.whl
}

sha512sums="
c2c8515fef329ba111399d394ba0039c63d825c1b264c1c26e0b44a98197a327280c577ae926529a261a352e579f8e5348ea1ee71757eab03817a97580b5491a  zipp-3.23.0.tar.gz
"
