pkgname=retroforth
pkgver=2025.08
pkgrel=0
pkgdesc="clean, elegant, and pragmatic dialect of Forth"
url="https://retroforth.org"
arch="all"
license="ISC"
subpackages="$pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://retroforth.org/r/RETRO12-$pkgver.tar.gz"
builddir="$srcdir/RETRO12-$pkgver"

build() {
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" PREFIX=/usr MANDIR=/usr/share/man/man1 install
}

