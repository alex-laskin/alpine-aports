# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=qt6
maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=qt6-qtspeech
pkgver=6.9.3
pkgrel=0
pkgdesc="Qt6 module to make text to speech and speech recognition easy"
url="https://qt.io/"
# armhf blocked by qt6-qtmultimedia
arch="all !armhf"
license="LGPL-2.1-only AND LGPL-3.0-only AND GPL-3.0-only AND Qt-GPL-exception-1.0"
depends_dev="
	alsa-lib-dev
	flite-dev
	qt6-qtmultimedia-dev
	"
makedepends="$depends_dev
	cmake
	perl
	qt6-qtbase-private-dev
	samurai
	"
case "$CARCH" in
	armhf) ;;
	*)
		depends_dev="$depends_dev
			qt6-qtdeclarative-dev
			"
		makedepends="$makedepends
			qt6-qtdeclarative-dev
			qt6-qtdeclarative-private-dev
			"
		;;
esac
subpackages="$pkgname-dev"
builddir="$srcdir/qtspeech-everywhere-src-${pkgver/_/-}"

case $pkgver in
	*_alpha*|*_beta*|*_rc*) _rel=development_releases;;
	*) _rel=official_releases;;
esac

source="https://download.qt.io/$_rel/qt/${pkgver%.*}/${pkgver/_/-}/submodules/qtspeech-everywhere-src-${pkgver/_/-}.tar.xz"
options="!check" # No tests

build() {
	export CFLAGS="$CFLAGS -flto=auto"
	export CXXFLAGS="$CXXFLAGS -flto=auto"
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

dev() {
	default_dev

	amove usr/lib/qt6/sbom
}

sha512sums="
5ee34f7f7e509f18d9ff8f88d6a291f63ee89d70bb5d8c3823154a656d13ad3fbaaa1f5aa8ed7f34e1b90be736673544030cc6a989988524448f2add9a031769  qtspeech-everywhere-src-6.9.3.tar.xz
"
