# Contributor: Alex Denes <caskd@redxen.eu>
# Maintainer: Celeste <cielesti@protonmail.com>
maintainer="Celeste <cielesti@protonmail.com>"
pkgname=py3-geographiclib
pkgver=2.1
pkgrel=0
pkgdesc="Geodesic routines from GeographicLib"
url="https://geographiclib.sourceforge.io/Python/doc/"
arch="noarch"
license="MIT"
makedepends="py3-gpep517 py3-setuptools py3-wheel"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://files.pythonhosted.org/packages/source/g/geographiclib/geographiclib-$pkgver.tar.gz"
builddir="$srcdir/geographiclib-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
585f507cf7c3815645462affcc40c6babfa3179dfae695eeddf1a96de9315957679a00949d8c68f900c6da024a57cf1f6b90cbd843d8fdc668b6b43717d9ae5c  geographiclib-2.1.tar.gz
"
