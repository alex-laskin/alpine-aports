# Maintainer: Leon Marz <main@lmarz.org>
pkgname=openxr
pkgver=1.1.53
pkgrel=0
pkgdesc="OpenXR loader library"
url="https://khronos.org/openxr"
arch="all"
license="Apache-2.0"
makedepends="cmake
	jsoncpp-dev
	jsoncpp-static
	mesa-dev
	samurai
	vulkan-loader-dev
	wayland-dev
	"
subpackages="$pkgname-dev $pkgname-doc"
source="$pkgname-$pkgver.tar.gz::https://github.com/KhronosGroup/OpenXR-SDK/archive/release-$pkgver.tar.gz"
builddir="$srcdir/OpenXR-SDK-release-$pkgver"
options="!check" # no check available

build() {
	case "$CARCH" in
		armhf)
			export CXXFLAGS="$CXXFLAGS -D_M_ARM" ;;
	esac

	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_BUILD_TYPE=Release
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

sha512sums="
c6cdaca84906e41e95ee36b843fec93ea527dd90268a5405dfe7e6b95f8c737348c96a1382d5d6aa248d3e751e2e321a929c5d82db183ee6023500b3baf65ce6  openxr-1.1.53.tar.gz
"
