# Contributor: Andy Hawkins <andy@gently.org.uk>
# Maintainer: Andy Hawkins <andy@gently.org.uk>
pkgname=py3-rkm-codes
pkgver=1.0
pkgrel=0
pkgdesc="Number format for compact robust labels"
url="https://nurdletech.com/linux-utilities/rkm_codes/"
arch="noarch"
license="MIT"
depends="
	python3
	py3-quantiphy
	"
makedepends="
	py3-flit-core
	py3-gpep517
	"
checkdepends="py3-pytest"
subpackages="$pkgname-pyc"
source="https://github.com/KenKundert/rkm_codes/archive/v$pkgver/rkm_codes-v$pkgver.tar.gz"
builddir="$srcdir/rkm_codes-$pkgver"

build() {
	gpep517 build-wheel \
		--wheel-dir .dist \
		--output-fd 3 3>&1 >&2
}

check() {
	python3 -m venv --clear --without-pip --system-site-packages .testenv
	.testenv/bin/python3 -m installer .dist/*.whl
	.testenv/bin/python3 -m pytest
}

package() {
	python3 -m installer -d "$pkgdir" \
		.dist/*.whl
}

sha512sums="
0355738c5b08b5c810d8f0f540a78e1cee63e69475468a8e996caaa0d67d9f70aec827ca1e51d1cfd6d3a1e4297b2d067a467e697dc4c4549eb5ee8a33f751c4  rkm_codes-v1.0.tar.gz
"
