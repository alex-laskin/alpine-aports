# The group tag is just to easily find this APKBUILD by some scripts for automation
# group=kde-frameworks
maintainer="team/kde <bribbers@disroot.org>"
pkgname=kstatusnotifieritem
pkgver=6.19.0
pkgrel=0
pkgdesc="Implementation of Status Notifier Items"
# armhf blocked by qt6-qtdeclarative
arch="all !armhf"
url="https://community.kde.org/Frameworks"
license="LGPL-2.0-or-later"
makedepends="
	doxygen
	extra-cmake-modules
	graphviz
	kde-qdoc-common
	kwindowsystem-dev
	py3-build
	py3-setuptools
	py3-shiboken6
	pyside6-dev
	python3-dev
	qt6-qtbase-dev
	qt6-qttools-dev
	samurai
	"
subpackages="
	$pkgname-dev
	$pkgname-doc
	$pkgname-lang
	py3-$pkgname:_py3
	"
_repo_url="https://invent.kde.org/frameworks/kstatusnotifieritem.git"
source="https://download.kde.org/stable/frameworks/${pkgver%.*}/kstatusnotifieritem-$pkgver.tar.xz"
options="!check" # Has a tests folder but not actually usable tests

build() {
	export KDE_DOCS=/usr/share/kde/documentation
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=RelWithDebInfo \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib
	cmake --build build

	cmake --build build --target prepare_docs
	cmake --build build --target generate_docs
	cmake --build build --target generate_qch
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	DESTDIR="$pkgdir" cmake --build build --target install_html_docs
	DESTDIR="$pkgdir" cmake --build build --target install_qch_docs
}

_py3() {
	amove usr/lib/python*
}

sha512sums="
a6c35b09f4304a10dc60b68b1d736a9c645f5d09eaa25c67eeb73f833d71547fd141e25ed8bea63fc128a5d8433ca93b454942dd9849117b338d6030f4c44822  kstatusnotifieritem-6.19.0.tar.xz
"
