install="$pkgname.post-install"

# secfixes:
#   23.1.2-r0:
#     - CVE-2023-1786
#   22.2.2-r0:
#     - CVE-2022-2084
#   21.1-r1:
#     - CVE-2021-3429

build() {
	abuild-meson \
		-Dinit_system=sysvinit_openrc \
		. output

	meson compile -C output
}

check() {
	# Upstream has not moved tests to Meson, usage of pytest is intended here.
	case $CARCH in
		riscv64) pytest -k "not (test_validateconfig_schema_non_strict_emits_warnings or test_validateconfig_schema_sensitive)" ;;
		*) pytest ;;
	esac
}

package() {
	DESTDIR="$pkgdir" meson install -C output --no-rebuild

	install -Dm644 \
		"$srcdir"/interfaces \
		"$pkgdir"/etc/network/interfaces

	install -Dm755 \
		"$srcdir"/cloud-init-hotplugd.initd \
		"$pkgdir"/etc/init.d/cloud-init-hotplugd

	install -Dm644 \
		"$srcdir"/cloud-init.logrotate \
		"$pkgdir"/etc/logrotate.d/cloud-init

	mkdir -p \
		"$pkgdir"/sbin
	install -m755 \
		"$srcdir"/setup-cloud-init \
		"$pkgdir"/sbin/

	mkdir -p \
		"$pkgdir"/usr/sbin
	install -m755 \
		"$srcdir"/cloud-init-hotplugd \
		"$pkgdir"/usr/sbin/

	install -m644 \
		"$srcdir"/README.Alpine \
		"$pkgdir"/usr/share/doc/"$pkgname"/

	# Delete non-Alpine distribution template files
	for distro in \
		arch centos cos debian fedora freebsd gentoo mariner openbsd \
		opensuse opensuse-leap opensuse-microos opensuse-tumbleweed \
		photon redhat rhel sle_hpc sle-micro sles suse ubuntu
	do
		for file in \
			"$pkgdir"/etc/cloud/templates/*."$distro".tmpl
		do
			rm "$file"
		done
	done
	rm "$pkgdir"/etc/cloud/templates/sources.list.*.tmpl

	# Delete non-Alpine os-specific files
	for distro in \
		almalinux amazon arch bsd centos cloudlinux cos debian \
		dragonflybsd eurolinux fedora freebsd gentoo mariner \
		miraclelinux netbsd openeuler openbsd OpenCloudOS \
		openmandriva opensuse opensuse-leap opensuse-microos \
		opensuse-tumbleweed photon rhel rhel_util rocky sle-micro \
		sle_hpc sles suse TencentOS ubuntu virtuozzo
	do
		rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/distros/"$distro".py
		rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/distros/__pycache__/"$distro".*.pyc
	done
	rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/distros/parsers/sys_conf.py
	rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/distros/parsers/__pycache__/sys_conf.*.pyc

	# Delete systemd-related files
	rm \
		"$pkgdir"/etc/cloud/templates/timesyncd.conf.tmpl \
		"$pkgdir"/etc/cloud/templates/systemd.resolved.conf.tmpl
	rm -Rf "$pkgdir"/etc/systemd

	# Delete NetworkManager-related files
	rm -Rf "$pkgdir"/etc/NetworkManager

	# Delete cloud-init modules not relevant to Alpine
	for module in \
		apt_* \
		byobu \
		fan \
		grub_dpkg \
		landscape \
		lxd \
		reset_rmc \
		rh_subscription \
		snap \
		spacewalk \
		ubuntu_autoinstall \
		ubuntu_drivers \
		yum_add_repo \
		zypper_add_repo
	do
		rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/config/cc_$module.py
		rm "$pkgdir"/usr/lib/python3.*/site-packages/cloudinit/config/__pycache__/cc_$module.*.pyc
	done

	# Delete cloud-init docs not relevant to Alpine
	for doc in \
		cloud-config-add-apt-repos.txt \
		cloud-config-apt.txt \
		cloud-config-update-apt.txt \
		cloud-config-yum-repo.txt
	do
		rm "$pkgdir"/usr/share/doc/cloud-init/examples/$doc
	done
}

logrotate() {
	pkgdesc="Cloud instance init scripts (logrotate configuration)"
	depends=""
	install_if="$pkgname=$pkgver-r$pkgrel logrotate"

	amove etc/logrotate.d/cloud-init
}

udev() {
	pkgdesc="Cloud instance init scripts (udev integration)"
	install_if="$pkgname=$pkgver-r$pkgrel eudev"

	# Move the Azure ephemeral disk udev rule
	amove usr/lib/udev/rules.d/66-azure-ephemeral.rules
}

# Meta-package for all datasources
datasources() {
	pkgdesc="Cloud-init all datasources (meta-package)"
	depends=""
	provides="cloud-init-datasources-any"
	provider_priority=2
	for ds in $_datasources; do
		depends="$depends $pkgname-datasource-${ds/:*/}=$pkgver-r$pkgrel"
	done
	mkdir -p "$subpkgdir"
}

# Datasource subpackages
_datasource() {
	local name=${subpkgname#"$pkgname"-datasource-}
	local dspath="usr/lib/python3.*/site-packages/cloudinit/sources"
	local dsname
	for ds in $_datasources; do
		case $ds in
		$name*)
			dsname="${ds/*:/}"
			dsname="${dsname/_/ }" ;;
		esac
	done

	pkgdesc="Cloud-init $dsname datasource"
	depends="$pkgname=$pkgver-r$pkgrel"
	provides="cloud-init-datasources-any"
	provider_priority=1

	case $name in
	aliyun)
		amove $dspath/DataSourceAliYun.py
		;;
	azure)
		amove $dspath/DataSourceAzure.py
		;;
	ec2)
		amove $dspath/DataSourceEc2.py
		;;
	gce)
		amove $dspath/DataSourceGCE.py
		;;
	ibmcloud)
		amove $dspath/DataSourceIBMCloud.py
		;;
	oracle)
		amove $dspath/DataSourceOracle.py
		;;
	wsl)
		amove $dspath/DataSourceWSL.py
		;;
	*)
		amove $dspath/DataSource$dsname.py
		;;
	esac
}

# Datasource pyc subpackages
_datasource_pyc() {
	local name=${subpkgname#"$pkgname"-datasource-}
	name=${name%-pyc}
	local dspath="usr/lib/python3.*/site-packages/cloudinit/sources"
	local dsname
	for ds in $_datasources; do
		case $ds in
		$name*)
			dsname="${ds/*:/}"
			dsname="${dsname/_/ }" ;;
		esac
	done

	pkgdesc="Precompiled Python bytecode for ${subpkgname%-pyc}"
	install_if="$pkgname-datasource-$name=$pkgver-r$pkgrel pyc"
	depends="$pkgname-datasource-$name=$pkgver-r$pkgrel"

	case $name in
	aliyun)
		amove $dspath/__pycache__/DataSourceAliYun.*.pyc
		;;
	azure)
		amove $dspath/__pycache__/DataSourceAzure.*.pyc
		;;
	ec2)
		amove $dspath/__pycache__/DataSourceEc2.*.pyc
		;;
	gce)
		amove $dspath/__pycache__/DataSourceGCE.*.pyc
		;;
	ibmcloud)
		amove $dspath/__pycache__/DataSourceIBMCloud.*.pyc
		;;
	oracle)
		amove $dspath/__pycache__/DataSourceOracle.*.pyc
		;;
	wsl)
		amove $dspath/__pycache__/DataSourceWSL.*.pyc
		;;
	*)
		amove $dspath/__pycache__/DataSource$dsname.*.pyc
		;;
	esac
}

