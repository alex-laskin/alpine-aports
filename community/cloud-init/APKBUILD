	py3-configobj
	py3-jinja2
	py3-jsonpatch
	py3-jsonschema
	py3-requests
	py3-yaml
	shadow
	tzdata
	$pkgname-datasources=$pkgver-r$pkgrel
	"
# eudev is only used for "pkg-config --variable=udevdir udev" to work
makedepends="
	blkid
	cloud-utils-growpart
	iproute2-minimal
	python3
	py3-configobj
	py3-jinja2
	py3-jsonpatch
	py3-jsonschema
	py3-requests
