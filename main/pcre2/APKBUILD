# Contributor: Jakub Jirutka <jakub@jirutka.cz>
# Maintainer: Jakub Jirutka <jakub@jirutka.cz>
pkgname=pcre2
pkgver=10.46
pkgrel=0
pkgdesc="Perl-compatible regular expression library"
url="https://pcre.org/"
arch="all"
license="BSD-3-Clause"
depends_dev="
	libedit-dev
	zlib-dev
	"
makedepends="$depends_dev"
subpackages="
	$pkgname-static
	$pkgname-dev
	$pkgname-doc
	$pkgname-tools
	libpcre2-16:_libpcre
	libpcre2-32:_libpcre
	"
source="https://github.com/PhilipHazel/pcre2/releases/download/pcre2-$pkgver/pcre2-$pkgver.tar.bz2"

# secfixes:
#   10.46-r0:
#     - CVE-2025-58050
#   10.41-r0:
#     - CVE-2022-41409
#   10.40-r0:
#     - CVE-2022-1586
#     - CVE-2022-1587

case "$CARCH" in
	sh*) _enable_jit="";;
	*) _enable_jit="--enable-jit";;
esac

build() {
	# Note: Forced -O3 is recommended (needed?) for Julia.
	./configure \
		CFLAGS="$CFLAGS -O3" \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--docdir=/usr/share/doc/$pkgname-$pkgver \
		--htmldir=/usr/share/doc/$pkgname-$pkgver/html \
		--enable-pcre2-16 \
		--enable-pcre2-32 \
		--enable-pcre2grep-libz \
		--enable-pcre2test-libedit \
		$_enable_jit
	make
}

check() {
	./RunTest
	if [ -n "$_enable_jit" ]; then
		./pcre2_jit_test
	fi
}

package() {
	make DESTDIR="$pkgdir" install
}

_libpcre() {
	local bits="${subpkgname##*-}"
	pkgdesc="PCRE2 with $bits bit character support"

	amove usr/lib/libpcre2-$bits.so*
}

tools() {
	pkgdesc="Auxiliary utilities for PCRE2"

	amove usr/bin
}

sha512sums="
795b0d74efb898347990c29fefc85f37ac81e7795f9d6a5598d1169a03c547df7ff7eac280f708b1fef68d3e7686e0d4cd55f0c6364e287ff2a983bbd1a3c334  pcre2-10.46.tar.bz2
"
