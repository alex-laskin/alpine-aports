# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=libdnet
pkgver=1.18.0
pkgrel=0
pkgdesc="simplified, portable interface to several low-level networking routines"
url="https://github.com/ofalk/libdnet"
arch="all"
license="BSD-3-Clause"
makedepends="check-dev linux-headers"
options="!check" # fails to find test-driver
subpackages="$pkgname-dev $pkgname-doc"
source="https://github.com/ofalk/libdnet/archive/libdnet-$pkgver.tar.gz"
builddir="$srcdir"/$pkgname-$pkgname-$pkgver

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--mandir=/usr/share/man \
		--without-python
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" install
}

sha512sums="
c074828a1ecd21c292f9120c7afb6b3c11e967d1e0aaca78e75a5558e96f5e65e0d24b68b8386c33c1c28734a3d30f5857d394796e049d521c8b4a9a2c8dcea9  libdnet-1.18.0.tar.gz
"
