# Contributor: Leo <thinkabit.ukim@gmail.com>
# Maintainer: Will Sinatra <wpsinatra@gmail.com>
pkgname=libfido2
pkgver=1.16.0
pkgrel=2
pkgdesc="library for FIDO 2.0 functionality"
url="https://github.com/Yubico/libfido2"
arch="all"
license="BSD-2-Clause"
install="$pkgname.pre-install"
makedepends="cmake libcbor-dev openssl-dev>3 zlib-dev eudev-dev linux-headers samurai"
subpackages="$pkgname-dev $pkgname-doc $pkgname-udev fido2:fido"
source="$pkgname-$pkgver.tar.gz::https://github.com/Yubico/libfido2/archive/refs/tags/$pkgver.tar.gz
	69-yubikey.rules"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build -G Ninja \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=MinSizeRel \
		$CMAKE_CROSSOPTS .
	cmake --build build
}

check() {
	cd build
	ctest -j4
}

package() {
	DESTDIR="$pkgdir" cmake --install build
	install -Dm644 -t "$pkgdir"/usr/lib/udev/rules.d/ "$builddir"/udev/70-u2f.rules
	# Install Yubikey specific udev rules (bug issue #17468)
	install -Dm644 "$srcdir"/69-yubikey.rules "$pkgdir"/usr/lib/udev/rules.d/69-yubikey.rules
}

fido() {
	pkgdesc="commandline utilities for FIDO 2.0"
	amove usr/bin
}

udev() {
	pkgdesc="Udev rules for FIDO 2.0 devices + Yubikey USB (challenge/response)."
	install_if="$pkgname=$pkgver-r$pkgrel eudev"
	amove usr/lib/udev/rules.d/
}

sha512sums="
