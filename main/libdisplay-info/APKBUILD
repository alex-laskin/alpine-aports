maintainer="Bart Ribbers <bribbers@disroot.org>"
pkgname=libdisplay-info
pkgver=0.3.0
pkgrel=0
pkgdesc="EDID and DisplayID library"
url="https://gitlab.freedesktop.org/emersion/libdisplay-info"
arch="all"
license="MIT"
makedepends="
	hwdata-dev
	meson
	"
subpackages="$pkgname-dev $pkgname-tools"
source="https://gitlab.freedesktop.org/emersion/libdisplay-info/-/archive/$pkgver/libdisplay-info-$pkgver.tar.gz"
options="!check" # edid-decode

build() {
	abuild-meson -Db_lto=true . output
	meson compile -C output
}

check() {
	meson test --print-errorlogs -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
}

tools() {
	pkgdesc="$pkgdesc (tools)"
	amove usr/bin
}

sha512sums="
fa023df810d9354135c3a8576233b1a4bab29d943e9ec61ba30cfe512001e4aa56ffc10e1af42ec4d1caa5c10d8e34e3bdbe51d1858d3db580b03a3fa266ee66  libdisplay-info-0.3.0.tar.gz
"
