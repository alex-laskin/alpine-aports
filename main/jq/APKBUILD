pkgname=jq
pkgver=1.8.1
pkgrel=0
pkgdesc="A lightweight and flexible command-line JSON processor"
url="https://jqlang.github.io/jq/"
arch="all"
license="MIT"
makedepends="oniguruma-dev sed"
checkdepends="tzdata"
subpackages="$pkgname-doc $pkgname-dev"
source="jq-$pkgver.tar.gz::https://github.com/jqlang/jq/releases/download/jq-$pkgver/jq-$pkgver.tar.gz
	test-portable.patch
	"

# secfixes:
#   1.8.1-r0:
#     - CVE-2025-49014
#   1.8.0-r0:
#     - CVE-2024-23337
#     - CVE-2024-53427
#     - CVE-2025-48060
#   1.7.1-r0:
#     - CVE-2023-50246
#     - CVE-2023-50268
#   1.6_rc1-r0:
#     - CVE-2016-4074

build() {
	./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--disable-docs
	make
}

check() {
	make check
}

package() {
	make DESTDIR="$pkgdir" prefix=/usr install
}

